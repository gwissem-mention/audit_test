        {% if basePath is defined %}
            <base href="{{ basePath }}" target="_blank">
        {% endif %}
    </head>
    <body>
        <table style="width:100%">
            <tr>
                <img
                    src="{{ asset(currentDomain.getWebPath(), null, true) }}"
                    alt="Logo {{ currentDomain.nom }}"
                    style="margin-left:5px; float:left;"
                />
                <br style="clear:both;" />
            </tr>
            <tr>
                <br />
                <hr style="width: 100%; margin: 10px 0; border-top:2px solid #cacaca; border-bottom:0; border-left:0; border-right: 0" />
                <br />
            </tr>
            <tr>
                {{ content|raw }}
            </tr>
        </table>
    </body>
</html>
