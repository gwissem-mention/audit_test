{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block title %}{{parent()}} - Aide plateforme{% endblock %}

{% block h1Title %}
    {% if aide.id %}
        Editer l'aide
    {% else %}
        Ajouter une aide
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-aide-aide-edit.js"
        "@tinymce_js"
        'bundles/nodevogestionnairemedia/js/moxiemanager/js/moxman.loader.min.js'
        'bundles/nodevogestionnairemedia/js/MoxieManager.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_aide_aide') }}" title="Retour Ã  la liste"><i class="fa fa-reply"></i></a>
    <div onclick="$('form').submit();" class="btn btn-default" title="Enregistrer"><i class="fa fa-check"></i></div>
    <div onclick="$('#do').val('save-close');$('form').submit();" class="btn btn-default" title="Enregistrer et Fermer"><i class="fa fa-save"></i></div>
    {% if aide.id %}
        <div onclick='deleteWithConfirm("{{ path('hopitalnumerique_aide_aide_delete', { 'id': aide.id }) }}");' class="btn btn-default" title="Supprimer"><i class="fa fa-trash-o"></i></div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <h4>Informations</h4>
            </div>

            <div class="panel-body">
                {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
                {{ form_start(form) }}
                {{ form_row(form.route) }}
                {{ form_row(form.libelle) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}