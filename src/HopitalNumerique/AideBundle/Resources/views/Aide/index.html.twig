{% extends 'NodevoAdminBundle::admin.html.twig' %}

{# Grid mandatory Stuff #}
{% use 'NodevoGridBundle::grid.config.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ block('grid_stylesheets')}}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ block('grid_javascripts')}}
{% endblock %}

{% block title %}{{parent()}} - Aide plateforme{% endblock %}

{% block h1Title %}
    Aide plateforme
{% endblock %}

{% block toolbarButton %}
    {% if app.user|checkAuthorization( path('hopitalnumerique_aide_aide_add') ) %}
        <a class="btn btn-default" href="{{ path('hopitalnumerique_aide_aide_add') }}" title="Ajouter une aide"><i class="fa fa-plus"></i></a>
    {% endif %}
{% endblock %}

{% block body %}
    {{ grid(grid, _self) }}
    {# Cache les lignes de filtres dans le grid #}
    {% block grid_filters %}{% endblock grid_filters%}
{% endblock %}