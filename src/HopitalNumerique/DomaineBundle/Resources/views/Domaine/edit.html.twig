{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output="compiled/hopitalnumerique-domaine-domaine-edit.js"
        '@validationEngine_js'
        "bundles/hopitalnumeriquedomaine/js/script.js"
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-domaine-domaine-edit.css" filter="cssrewrite, ?yui_css"
        '@validationEngine_css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block h1Title %}
    {% if domaine.id %}
        Editer un domaine
    {% else %}
        Ajouter un domaine
    {% endif %}
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_domaine_admin_domaine') }}" title="Retour Ã  la liste"><i class="fa fa-reply"></i></a>
    <div onclick="$('form').submit();" class="btn btn-default" title="Enregistrer"><i class="fa fa-check"></i></div>
    <div onclick="$('#do').val('save-close');$('form').submit();" class="btn btn-default" title="Enregistrer et Fermer"><i class="fa fa-save"></i></div>
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <h4>Informations</h4>
            </div>

            <div class="panel-body">
                {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
                {{ form_start(form) }}
                    {{ form_errors(form) }}
                    
                    {# Formulaire : #}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.url) }}

                    {# Gestion de l'upload #}
                    <div class="form-group">
                        {{ form_label(form.file) }}
                        <div class="col-md-6">
                            {% if domaine.getAbsolutePath() is not null %}
                                {% set visibility = 'none' %}
                            {% else %}
                                {% set visibility = 'block' %}
                            {% endif %}
                            <div class="inputUpload" style="display:{{visibility}}">
                                {{ form_widget(form.file) }}
                            </div>

                            {% if domaine.getAbsolutePath() is not null %}
                                <img class="uploadedFile" src="/{{ domaine.getWebPath() }}" alt="Photo de profil" width="92px" height="132px">
                                <div class="deleteUploadedFile btn btn-danger btn-xs pull-right" ><i class="fa fa-trash-o"></i></div>
                            {% endif %}
                        </div>
                        <div class="col-md-3">
                            <div class="help-block error_file">
                                {{ form_errors(form.file) }}
                            </div>
                        </div>
                    </div>

                    {{form_row(form.adresseMailContact)}}
                    {{form_row(form.template)}}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
