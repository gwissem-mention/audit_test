{% endblock %}

{% block _hopitalnumerique_reference_reference_champLexicalNoms_entry_widget %}
    {{- form_widget(form.libelle) -}}
{% endblock %}

{% block form_label %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label for="{{ id }}">
        {{ label|trans|raw }}
        {% if required %}
            <span style="color:red;font-size:10px" title="Ce champ est requis">*</span>
        {% endif %}
    </label>
{% endblock %}

{%- block form_end -%}
    {%- if not render_rest is defined or render_rest -%}
        {{ form_rest(form) }}
    {%- endif -%}
    <input type="hidden" name="do" id="do">
    </form>
{%- endblock form_end -%}
