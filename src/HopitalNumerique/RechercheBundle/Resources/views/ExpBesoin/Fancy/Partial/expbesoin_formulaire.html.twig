        {% for reponse in expBesoin.reponses %}
            {# Include vue de l'étape #}
            {% include 'HopitalNumeriqueRechercheBundle:ExpBesoin:Fancy/Partial/expbesoin_formulaire_reponse.html.twig' with { 'reponse' : reponse, 'question' : expBesoin } %}
        {% endfor %}
    </div>
