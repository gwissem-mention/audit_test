<form class="form-horizontal">
    <div style="width:790px;">
        <h2>Ajouter une recherche aidée</h2>
        <hr>
        <div class="form-group">
            <label class="col-sm-2 control-label">Recherche aidée</label>
            <div  class="col-sm-10">
                <select name="rechercheAidee" id="rechercheAidee" class="form-control">
                    <option> - </option>
                    {% for rechercheAidee in rechercheAidees %}
                        <option value="RECHERCHEAIDEE:{{ rechercheAidee.id }}">{{ rechercheAidee.nom }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group" style="float:right;margin-right:0px;">
            <button id="submit" type="button" class="btn btn-primary">OK</button>
            <button id="cancel" type="button" class="btn btn-danger" >Annuler</button>
            <input type="hidden" id="choix" />
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $('#rechercheAidee').select2({
            placeholder: "Choisissez une recherche aidée",
            allowClear: true,
            formatNoMatches : function(){
                return "Aucun résultat trouvé.";
            }
        });
        
        $('#submit').click(function() {
            $('#choix').val('submit');
            $.fancybox.close();
        });

        $('#cancel').click(function() {
            $('#choix').val('cancel');
            $.fancybox.close();
        });
    });
</script>