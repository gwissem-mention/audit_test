{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block h1Title %}
    {% if flash.id %}
        Editer un flash message
    {% else %}
        Ajouter un flash message
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-flash-flash-edit.css" filter="cssrewrite, ?yui_css" 
        "@select2_css"
        'bundles/hopitalnumeriqueuser/js/nSelect/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-flash-flash-edit.js"
        "@select2_js"
        'bundles/hopitalnumeriqueuser/js/nSelect/nSelect.min.js'
        'bundles/hopitalnumeriqueflash/js/script.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_flash_flash') }}" title="Retour Ã  la liste"><i class="fa fa-reply"></i></a>
    <div onclick="$('form').submit();" class="btn btn-default" title="Enregistrer"><i class="fa fa-check"></i></div>
    <div onclick="$('#do').val('save-close');$('form').submit();" class="btn btn-default" title="Enregistrer et Fermer"><i class="fa fa-save"></i></div>
    {% if flash.id %}
        <div onclick='deleteWithConfirm("{{ path('hopitalnumerique_flash_flash_delete', { 'id': flash.id }) }}");' class="btn btn-default" title="Supprimer"><i class="fa fa-trash-o"></i></div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <h4>Informations</h4>
            </div>

            <div class="panel-body">
                {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
