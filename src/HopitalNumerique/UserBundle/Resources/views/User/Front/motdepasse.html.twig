{% extends 'HopitalNumeriqueAccountBundle::layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-user-motdepasse-edit.css" filter="cssrewrite"
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/css/validationEngine.jquery.css'
        'bundles/hopitalnumeriqueuser/css/motdepasse.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-user-motdepasse-editer.js"
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/js/jquery.validationEngine.js'
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/js/languages/jquery.validationEngine-fr.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block headerTitle %}Modification de mon mot de passe{% endblock %}

{% block headerDesc %}
    <p>
        Créez un mot de passe pour avoir accès à votre espace personnel.
    </p>
{% endblock %}

{% block content %}
    <div id="form_edit_user">
        <div id="form_edit_motdepasse">
            {% form_theme form 'HopitalNumeriqueAccountBundle:Formulaire:theme.default.html.twig' %}
            {{ form_start(form) }}
                {{ form_javascript(form) }}
                <div class="champ-obligatoire"><span class="etoile">*</span> champ(s) obligatoire(s)</div>
                
                <div class="col-md-12">
                    {{ form_row(form.oldPassword) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.plainPassword) }}
                </div>
                <div class="col-md-12">
                    {# Permet de mettre à la ligne le submit #}
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <input onclick="$('form').submit();" class="btn btn-success pull-right submit" value="ENREGISTRER NOUVEAU MOT DE PASSE" type="button" />
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}