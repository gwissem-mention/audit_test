{% if domaines %}
    <div class="panel panel-default gray">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseDomaines" class="collapsed" id="domaines_collapse">
            <div class="panel-heading"><h4>Connaissances m√©tiers</h4></div>
        </a>
        <div id="collapseDomaines" class="collapse" style="height: 0px;">

            <div class="panel-body">
                <div class="col-md-12">
                    <ul>
                        {% for domaine in domaines %}
                            <li>
                                <div class="form-group">
                                    <strong>{{domaine.domaine.libelle}}</strong> : {% if domaine.connaissance is not null %}{% for i in 1..domaine.connaissance.order %}<i class="fa fa-star violet"></i>{% endfor %} - {{domaine.connaissance.libelle}}{% else %}<i class="fa fa-ban"></i>{% endif %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>  
            </div>
        </div>
    </div>
{% endif %}