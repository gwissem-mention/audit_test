{% extends 'HopitalNumeriqueCoreBundle:Templates:' ~ templateCurrentId ~ '/layout.html.twig' %}

{# Référencement #}
{% block title %}{{parent()}} - Email envoyé{% endblock %}
{% block metadesc %}Connectez-vous à votre compte "{{domaineCurrent.nom}}" pour accéder aux outils proposés par l'ANAP{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-user-resetting-checkEmail.css" filter="cssrewrite, ?yui_css"
        'bundles/hopitalnumeriqueaccount/css/login.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="col-md-8 col-md-offset-2" id="login">
        <h3>Un email de réinitialisation de mot de passe a été envoyé</h3>
        <form action="{{ path("fos_user_resetting_send_email") }}" class="form-horizontal fos_user_resetting_request" method="post" >
            <div class="background-violet"></div>
            <p>
                {{ 'resetting.check_email'|trans({'%email%': email}, 'FOSUserBundle') }}
            </p>
            <div class="clearfix"></div>

            <a class="btn btn-success pull-right submit" href="{{path('hopital_numerique_homepage')}}">Retour à l'accueil</a>
        </form>
    </div>
{% endblock %}
