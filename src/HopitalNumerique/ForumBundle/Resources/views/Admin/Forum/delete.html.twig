{% extends 'CCDNForumForumBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.forum.admin.delete.layout_template %}

{%- block title -%}
    {{ domaineCurrent.nom }} - {{ 'title.admin.manage-forums.delete' |trans({'%forum_name%': forum.name}, 'CCDNForumForumBundle') -}}
{%- endblock title -%}

{%- block sidebar -%}
    {%- spaceless -%}
    {{- parent() -}}
    {%- include 'CCDNForumForumBundle:Common:Layout/Sidebar/admin_forum.html.twig' -%}
    {%- endspaceless -%}
{%- endblock sidebar -%}

{% block information_page %}
    <div class="col-md-12">
        <h3 class="violet">Forum - Administration </h3>
    </div>
{% endblock information_page %}

{%- block body_content -%}
    {%- spaceless -%}

    <section class="clearfix">
        {%- form_theme form ccdn_forum_forum.forum.admin.delete.form_theme -%}
        <form action="{{- path('ccdn_forum_admin_forum_delete_process', {'forumId': forum.id}) -}}"
         method="post" {{ form_enctype(form) }} class="form-horizontal toValidate" novalidate>
            <fieldset>

                <div class="form-group">
                    <div id="titre-creation">
                        <h4>
                            {{ domaineCurrent.nom }} - {{ 'title.admin.manage-forums.delete' |trans({'%forum_name%': forum.name}, 'CCDNForumForumBundle') -}}
                        </h4>
                    </div>
                </div>

                {{- form_errors(form) -}}

                {{- form_rest(form) -}}

                <div class="row form-buttons">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-danger" value="
                                {{- 'form.button.confirm-delete' |trans({}, ForumBundle.translation ) -}}
                            " name="submit[post]" id="submit[post]">

                            <a class="btn btn-default" href="{{- path('ccdn_forum_admin_forum_list') -}}">
                                {{- 'form.button.cancel' |trans({}, ForumBundle.translation ) -}}
                            </a>
                        </div>
                    </div>
                </div>

            </fieldset>
        </form>
    </section>

    {%- endspaceless -%}
{%- endblock body_content -%}
