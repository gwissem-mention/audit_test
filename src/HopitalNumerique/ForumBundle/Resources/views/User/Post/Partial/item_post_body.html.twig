{%- spaceless -%}

    {%- if post.isDeleted == false or is_granted('ROLE_ADMINISTRATEUR_1') -%}
        {%- if post.getEditedDate -%}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-pencil" style="margin: 0 5px 0 0;"></i>

                    {{- 'post.edited-by' |trans({}, ForumBundle.translation ) |raw -}}
                    {% if post.getEditedBy.getPseudonymeForum() is defined and post.getEditedBy.getPseudonymeForum() is not null %}
                        {{- post.getEditedBy.getPseudonymeForum() -}}
                    {% else %}
                        {{- post.getEditedBy.getNomPrenom() -}}
                    {% endif %}

                    &nbsp;&#183;

                    <abbr class="timestamper" title="{{- post.getEditedDate |date('Y-m-d H:i:s T Z', 'Europe/London') -}}">
                        {{- post.getEditedDate |date(ccdn_forum_forum.item_post.edited_datetime_format) -}}
                    </abbr>
                </div>
            </div>
        {%- endif -%}
    {%- endif -%}

    {%- if post.isDeleted == true -%}
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-trash"></i>

                {{- 'post.deleted-by' |trans({}, ForumBundle.translation ) |raw -}}
                {% if post.getDeletedBy.getPseudonymeForum() is defined and post.getDeletedBy.getPseudonymeForum() is not null %}
                    {{- post.getDeletedBy.getPseudonymeForum() -}}
                {% else %}
                    {{- post.getDeletedBy.getNomPrenom() -}}
                {% endif %}

                &nbsp;&#183;

                <abbr class="timestamper" title="{{- post.getDeletedDate |date('Y-m-d H:i:s T Z', 'Europe/London') -}}">
                    {{- post.getDeletedDate |date(ccdn_forum_forum.item_post.deleted_datetime_format) -}}
                </abbr>
            </div>

            {%- if is_granted('ROLE_ADMINISTRATEUR_1') -%}
                <div class="pull-right">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#post_{{- post.getId() -}}" href="#post_{{- post.getId() -}}_body">
                        {{- 'post.show' |trans({}, ForumBundle.translation ) -}}
                    </a>
                </div>
            {%- endif -%}
        </div>

        {%- if is_granted('ROLE_ADMINISTRATEUR_1') -%}
            <section class="accordion-body collapse" id="post_{{- post.getId() -}}_body">
                {%- include 'CCDNForumForumBundle:User:Post/Partial/body_content.html.twig' with {'post': post } -%}
            </section>
        {%- endif -%}
    {%- else -%}
        <section id="post_{{- post.getId() -}}_body">
            {%- include 'CCDNForumForumBundle:User:Post/Partial/body_content.html.twig' with {'post': post } -%}
        </section>
    {%- endif -%}

{%- endspaceless -%}
