{%- spaceless -%}

    {% if is_granted("ROLE_ADMINISTRATEUR_1") %}
    <div class="col-md-12 btn-toolbar">
        <a href="{{path('hopitalnumerique_objet_reference_objet_own', {'id':1})}}" class="manageReferences btn btn-xs btn-primary fancybox.ajax pull-right"><i class="fa fa-eye"></i></a>
        <a href="{{path('hopitalnumerique_objet_reference_objet', {'id':1})}}" class="manageReferences edit btn btn-xs btn-primary fancybox.ajax pull-right"><i class="fa fa-cog"></i></a>
        <p class="text-muted text-right pull-right"><span class="nbRefs">{% if not 1 %}0{% else %}1{% endif %}</span> éléments référencés</p>
    </div>
    {% endif %}
    <header class="row clearfix">
        <div class="col-md-6">
            <span class="lead" title="{{- topic.getTitle -}}">{{- topic.getTitle |capitalize -}}</span>
        </div>
        <div class="col-md-6 text-right">
            <span class="label label-default" title="{{- topic.cachedReplyCount -}}">
                {{- 'topic.reply-count-label' |trans({}, 'CCDNForumForumBundle') -}}
                {{- topic.cachedReplyCount -}}
            </span>

            &nbsp;

            <span class="label label-default" title="{{- topic.cachedViewCount -}}">
                {{- 'topic.view-count-label' |trans({}, 'CCDNForumForumBundle') -}}
                {{- topic.cachedViewCount -}}
            </span>

            {%- if subscription_count is defined -%}
                &nbsp;
                <span class="label label-default" title="{{- subscription_count -}}">
                    {{- 'topic.subscription-count-label' |trans({}, 'CCDNForumForumBundle') -}}
                    {{- subscription_count -}}
                </span>
            {%- endif -%}
        </div>
    </header>

{%- endspaceless -%}
