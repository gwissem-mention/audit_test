{%- spaceless -%}

    <section class="clearfix">
        {%- if topic.isDeleted or topic.isClosed %}
            <div class="alert alert-danger">
                {%- if topic.isDeleted -%}
                    <i class="glyphicon glyphicon-trash"></i>

                    {{- 'topic.deleted-by' | trans({}, ForumBundle.translation ) |raw -}}
                    {% if forum.id == 4 %}
                        <i>Anonyme</i>
                    {% else %}
                        {% if topic.getDeletedBy.getPseudonym() %}
                            {{- topic.getDeletedBy.getPseudonym() -}}
                        {% else %}
                            {{- topic.getDeletedBy.getNomPrenom() -}}
                        {% endif %}
                    {% endif %}

                    &nbsp;&#183;

                    {{- topic.getDeletedDate |date(ccdn_forum_forum.topic.user.show.deleted_datetime_format) -}}
                {%- endif -%}

                {%- if topic.isClosed -%}
                    {%- if topic.isDeleted -%}<br>{%- endif -%}
                    <i class="glyphicon glyphicon-lock"></i>

                    {{- 'topic.closed-by' | trans({}, ForumBundle.translation ) |raw -}}
                    {{- topic.getClosedBy -}}

                    &nbsp;&#183;

                    {{- topic.getClosedDate |date(ccdn_forum_forum.topic.user.show.closed_datetime_format) -}}
                {%- endif -%}
            </div>
        {%- endif -%}
    </section>

{%- endspaceless -%}
