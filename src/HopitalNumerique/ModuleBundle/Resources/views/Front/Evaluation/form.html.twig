{% extends 'HopitalNumeriqueAccountBundle::layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-module-front-evaluation-form.css" filter="cssrewrite, ?yui_css"
        '@validationEngine_css'
        'bundles/hopitalnumeriquemodule/css/Front/evaluation/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-module-front-evaluation-form.js"
        "@validationEngine_js"
        'bundles/hopitalnumeriquemodule/js/Front/evaluation.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block headerTitle %}Evaluation{% endblock %}
{% block headerDesc %}
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
    consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
    cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
    proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
{% endblock %}

{% block content %}
    <div class="col-md-12">
        {% form_theme form 'HopitalNumeriqueQuestionnaireBundle:Questionnaire/Theme:theme.vertical.html.twig' %}
        {{ form_javascript(form) }}
        {{ form(form) }}
    </div>
    <div class="clearfix"></div>

    <div class="col-md-12">
        <div class="col-md-10 col-md-offset-2">
            <input onclick="$('form').submit();" class="btn btn-success col-md-3 pull-right submit questionnaire_submit" value="EVALUER" type="button"/>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}