{% extends 'HopitalNumeriqueCoreBundle::layout.html.twig' %}

{# Référencement #}
{% block title %}{{parent()}} - Module{% endblock %}
{% block metadesc %}Modules et sessions{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-module-front-module-index.css" filter="cssrewrite, ?yui_css"
        'bundles/hopitalnumeriquemodule/css/Front/module/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}

{% block body %}
    <div id="module">
        {# En-tête #}
        <div class="col-md-12">
            <h3 class="violet">Module <a href="{{path('hopital_numerique_user_informations_personnelles')}}" class="pull-right">Tableau de bord</a> </h3>
        </div> 
        
        {#  #}
        <div class="col-md-3">
            Menu
        </div>
        
        <div class="content col-md-9 no_padding">
            {% block content %}
                <div class="module">
                
                    {% block chapo %}
                        <div class="col-md-12">
                            <div class="chapo">
                                <h1 class="violet">Module</h1>
                                <div class="description"><p>Vous souhaitez assister à une session ?</p></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    {% endblock %}
                    
                    {% block contenu %}
                        <div class="col-md-12">
                            <div class="panel">
                                aaaa 
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    {% endblock contenu %}
                    
                </div>
            {% endblock content %}

            <div class="clearfix"></div>
        </div>

        <div class="clearfix"></div>
    </div>
{% endblock body %}
