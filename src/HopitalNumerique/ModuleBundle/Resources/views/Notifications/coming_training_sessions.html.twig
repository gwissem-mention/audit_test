{% extends "NodevoMailBundle:Notifications:template.html.twig" %}
{% set notifications = notifications %}
{% trans_default_domain 'notification' %}
{% block single %}
    {{ ('notification_config.grouped.' ~ notif.notificationCode ~ '.single')|trans({
        '%moduleName%' : notif.title,
        '%formateur%' : notif.getData('formateur'),
        '%dateSession%' : notif.getData('dateSession'),
        '%description%' : notif.getData('description')
    }) }}
{% endblock %}
{% block header %}
    {{ ('notification_config.grouped.' ~ notif.notificationCode ~ '.multiple.header')|trans({
        '%number%' : notifications|length
    }) }}
{% endblock %}
{% block content %}
    {{ ('notification_config.grouped.' ~ notif.notificationCode ~ '.multiple.content')|trans({
        '%moduleName%' : notif.title,
        '%formateur%' : notif.getData('formateur'),
        '%dateSession%' : notif.getData('dateSession'),
        '%description%' : notif.getData('description')
    }) }}
{% endblock %}
