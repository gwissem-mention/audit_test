{% extends 'HopitalNumeriqueCoreBundle:Templates:' ~ templateCurrentId ~ '/layout.html.twig' %}

{# Référencement #}
{% block title %}{{parent()}} - Glossaire{% endblock %}


{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-glossaire-front-index.css" filter="cssrewrite, ?yui_css" 
        'bundles/hopitalnumeriqueglossaire/css/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-glossaire-front-index.js" 
        'bundles/hopitalnumeriqueglossaire/js/front.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div id="glossaire">
        <div style="margin-top:20px;">
            <div class="col-md-5">
                <p class="text-muted">Sauf indication contraire, les définitions apportées sont issues des productions ANAP.</p>
            </div>
            <div class="col-md-3">
                <div id="show-all-button" class="btn btn-success"><i class="fa fa-search-plus"></i> Afficher tous les éléments</div>
            </div>
            <div class="col-md-4">
                {# Recherche textuelle #}
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                    <input type="text" name="recherche_textuelle" id="recherche_textuelle" class="form-control" />
                    <span class="input-group-btn">
                        <button class="btn btn-success" type="button"><i class="fa fa-check"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-12">
            <h1 class="violet">Glossaire</h1>

            {% for key,datas in glossaires %}
                <div id="glossaire-{{key}}" class="glossaire" {% if key == 'all' %}style="display:none;"{% endif %}>
                    <div class="alphabet">
                        {% for letter in 'a'|upper..'z'|upper %}
                            {% if letter in datas|keys %}
                                <a href="#{{letter}}">{{letter}}</a>
                            {% else %}
                                <p>{{letter}}</p>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <div class="clearfix"></div>

                    <div class="liste">
                        {% for letter in 'a'|upper..'z'|upper %}
                            {% if letter in datas|keys %}
                                {% set glossaires = datas[letter] %}
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2 class="{{ cycle(['rose', 'violet'], loop.index) }}" id="{{letter}}">{{letter}}</h2>
                                        <div class="sep"></div>
                                        <div class="elements">
                                            {% for element in glossaires %}
                                                <div class="row">
                                                    <div class="col-md-12" id="{{element.mot|minifieMoi}}">
                                                        <p class="titre">
                                                            {% if element.intitule %}
                                                                {{ element.mot ~ ' : ' ~ element.intitule }}
                                                            {% else %}
                                                                {{ element.mot }}
                                                            {% endif %}
                                                        </p>
                                                        <p class="desc">
                                                            {{ element.description|nl2br }}
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="sep"></div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}
