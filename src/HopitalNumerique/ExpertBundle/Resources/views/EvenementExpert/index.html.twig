{% extends 'NodevoAdminBundle::admin.html.twig' %}

{# Grid mandatory Stuff #}
{% use 'NodevoGridBundle::grid.config.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ block('grid_stylesheets')}}
    {% stylesheets output="compiled/hopitalnumerique-expert-evenement-index.css" filter="cssrewrite, ?yui_css" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ block('grid_javascripts')}}
    {% javascripts output="compiled/hopitalnumerique-expert-evenement-index.js"
        'bundles/hopitalnumeriqueexpert/js/index.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


{% block h1Title %}
    Gestion des évenements de l'activité
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_expert_expert_activite') }}" title="Retour à la liste"><i class="fa fa-reply"></i></a>
    <a class="btn btn-default" href="{{ path('hopitalnumerique_expert_evenement_expert_add', {'id' : activiteExpert.id }) }}" title="Ajouter un EvenementExpert"><i class="fa fa-plus"></i></a>
{% endblock %}

{% block body %}
    {{ grid(grid, _self) }}
{% endblock %}
