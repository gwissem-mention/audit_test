{% block fancybox %}
    <div id="biographie">
        <div class="col-md-5">
            <img width="100%" src="{{user.getWebPath()}}" title="{{user.getAppellation()}}" alt="Photo de {{  user.getAppellation()}}" />
        </div>
        <div class="col-md-7">

            {{ include('@HopitalNumeriqueCart/cart/addBtn.html.twig', {objectType: 'person', objectId: user.id, cssClass: 'pull-right'}) }}

            <h2>{{user.getPrenomNom()}}</h2>
            <div class="biographie-user">
                {% if user.presentation is not null %}
                    {{user.presentation|raw}}
                {% else %}
                    <span class="text-muted">Biographie en cours de r√©daction...</span>
                {% endif %}
            </div>
        </div>
        
        <div class="clearfix"></div>

    </div>

    <style type="text/css">
        #biographie {padding: 30px 15px; }
        #biographie img{margin-bottom: 10px;}
        h2 {color:#d60030; margin-top:0;}
    </style>
    
{% endblock %}
