{% trans_default_domain 'cdpNews' %}

<div class="item">

    <div class="infos">
        <span class="title">
            {{ 'wall.item.message.title'|trans }}
        </span>
        <span class="author">
            {{ 'wall.item.message.authored'|trans({'%author%': item.author.prenomNom, '%discussion%': item.discussion.title, '%date%': item.date|date('d/m/Y H:i')}) }}
        </span>
    </div>

    <div class="content">
        <a href="{{ path('hopitalnumerique_communautepratique_discussions_public_desfult_discussion', {discussion: item.discussion.id}) }}#{{ 'message-'~item.messageId }}"
           class="link"
           data-toggle="tooltip"
           data-placement="top"
           data-html="true"
           title="{{ 'wall.item.message.link'|trans }}"
        >
            {{ item.content|parsePublication|striptags|unescape|truncate(200) }}
        </a>
    </div>

</div>
