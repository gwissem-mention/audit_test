<form class="form-horizontal">
    <div style="width:780px;">
        <h2>Ajouter un lien vers un document</h2>
        <hr>
        <div class="form-group">
            <label class="col-sm-2 control-label">Document</label>
            <div  class="col-sm-10">
                <select name="document" id="document" class="form-control">
                    <option> - </option>
                    {% for document in documents %}
                        <option value="{{ document.id }}">{{ document.libelle }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group" style="float:right;margin-right:0px;">
            <button id="submit" type="button" class="btn btn-primary">OK</button>
            <button id="cancel" type="button" class="btn btn-danger" >Annuler</button>
            <input type="hidden" id="texte">
            <input type="hidden" id="choix">
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $('#submit').click(function() {
            $('#choix').val('submit');
            $('#texte').val($('#document :selected').text());
            $.fancybox.close();
        });

        $('#cancel').click(function() {
            $('#choix').val('cancel');
            $.fancybox.close();
        });
    });
</script>
