{% extends 'HopitalNumeriqueCommunautePratiqueBundle::layout.html.twig' %}

{% block title_communaute_pratique %}Groupes thématiques{% endblock %}

{% block body_communaute_pratique %}

    {% import "HopitalNumeriqueCommunautePratiqueBundle:include:blocks.html.twig" as communaute_pratique %}
    
    <div class="row" id="communaute-pratiques-groupes">
        <div class="col-md-9">
            
            <div>
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation"{{ groupesNonDemarres|length > 0 or groupesEnCours|length == 0 ? ' class="active"' : '' }}><a href="#a-venir" aria-controls="a-venir" role="tab" data-toggle="tab"><em class="icon-social20"></em> &nbsp; Groupes thématique à venir</a></li>
                    <li role="presentation"{{ groupesNonDemarres|length == 0 and groupesEnCours|length > 0 ? ' class="active"' : '' }}><a href="#en-cours" aria-controls="en-cours" role="tab" data-toggle="tab"><em class="icon-social20"></em> &nbsp; Groupes thématique en cours</a></li>
                    <li role="presentation"{{ groupesNonDemarres|length == 0 and groupesEnCours|length > 0 ? ' class="active"' : '' }}><a href="{{ path('hopitalnumerique_communautepratique_publication_list') }}"><em class="icon-social20"></em> &nbsp; Groupes terminés</a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane{{ groupesNonDemarres|length > 0 or groupesEnCours|length == 0 ? ' active' : '' }}" id="a-venir">

                        {% for groupeNonDemarre in groupesNonDemarres %}
                            {{ communaute_pratique.display_groupe(groupeNonDemarre) }}
                        {% else %}
                            <p class="text-center">&nbsp;<br>Aucun groupe thématique à venir<br>&nbsp;</p>
                        {% endfor %}

                    </div>
                    <div role="tabpanel" class="tab-pane{{ groupesNonDemarres|length == 0 and groupesEnCours|length > 0 ? ' active' : '' }}" id="en-cours">

                        {% for groupeEnCours in groupesEnCours %}
                            {{ communaute_pratique.display_groupe(groupeEnCours) }}
                        {% else %}
                            <p class="text-center">&nbsp;<br>Aucun groupe thématique en cours<br>&nbsp;</p>
                        {% endfor %}

                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-md-3">

            {{ communaute_pratique.display_bloc_mes_groupes(userGroupesEnCours) }}

            <div class="communaute-de-pratiques-bloc-publications">
                <a href="{{ path('hopitalnumerique_communautepratique_publication_list') }}"><em class="icon-documents7"></em> Publications issues des groupes</a>
            </div>

        </div>
    </div>

{% endblock body_communaute_pratique %}

{% block communaute_pratique_sommaire %}
<div class="communaute-de-pratiques-sommaire">
    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('hopitalnumerique_communautepratique_accueil_index') }}"><em class="icon icon-download105"></em> Tableau de bord</a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('hopitalnumerique_communautepratique_user_list') }}"><em class="icon-group2"></em> Membres de la communauté</a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('hopitalnumerique_communautepratique_publication_list') }}"><em class="icon-documents7"></em> Publications issues des groupes</a>
        </div>
        <div class="col-md-3">
            <a href="{{- path('ccdn_forum_user_category_show', {'categoryId': 13, 'forumName': 'public' }) -}}"><em class="icon-chat27"></em> Forum de la communauté de pratiques</a>
        </div>
    </div>
</div>
{% endblock %}
