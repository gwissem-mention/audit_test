{% trans_default_domain 'cdp_discussion' %}

<form method='post' action="{{ path('hopitalnumerique_communautepratique_discussions_%s_discussion'|format(type), {'discussion': discussion.id}) }}">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">
            {{ 'discussion.discussion.actions.group_%s.modal.title'|format(type)|trans({'%groupName%': discussion.title}) }}
        </h4>
    </div>
    <div class="modal-body">
        {% if groups|length %}
            <select name="group" style="width: 100%;">
                {% for group in groups %}
                    <option value="{{ group.id }}">{{ group }}</option>
                {% endfor %}
            </select>
        {% else %}
            <b>{{ 'discussion.discussion.actions.group_%s.modal.empty'|format(type)|trans }}</b>
        {% endif %}
    </div>
    {% if groups|length %}
        <div class="modal-footer">
            <input type="submit" class="btn btn-success">
        </div>
    {% endif %}
</form>
