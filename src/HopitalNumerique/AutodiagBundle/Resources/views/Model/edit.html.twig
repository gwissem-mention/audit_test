{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-autodiag-model.js"
        '@HopitalNumeriqueAutodiagBundle/Resources/public/js/tinymce.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block h1Title %}
    {% if model.id %}
        Edition "{{ model.title }}"
    {% else %}
        Ajout autodiag
    {% endif %}
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_autodiag_model_list') }}" title="Retour Ã  la liste"><i class="fa fa-reply"></i></a>
    <div onclick="$('form').submit();" class="btn btn-default" title="Enregistrer"><i class="fa fa-check"></i></div>
    <div onclick="$('#do').val('save-close');$('form').submit();" class="btn btn-default" title="Enregistrer et Fermer"><i class="fa fa-save"></i></div>
    {#{% if expbesoingestion.id %}#}
        {#<div onclick='deleteWithConfirm("{{ path('hopitalnumerique_recherche_admin_aide-expression-besoin_gestion_delete', { 'id': expbesoingestion.id }) }}");' class="btn btn-default" title="Supprimer"><i class="fa fa-trash-o"></i></div>#}
    {#{% endif %}#}
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <h4>Informations</h4>
            </div>

            <div class="panel-body">
                {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
                {{ form_start(form) }}

                {{ form_row(form.model.title) }}
                {{ form_row(form.model.domaines, {"attr": {"class": "select2"}}) }}
                {{ form_row(form.model.questionnaire) }}
                {{ form_row(form.model.instructions, {"attr": {"class": "tinyMceBasic"}}) }}
                {{ form_row(form.model.partialResultsAuthorized) }}

                {% for preset in form.presets %}
                    <div class="preset">
                        <div class="preset-title">
                            {{ ("ad.model.preset_value." ~ preset.vars.data.type)|trans }}
                        </div>

                        <div class="preset-childs">
                            {% for child in preset %}
                                <div class="preset-child">
                                    {{ form_widget(child) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}

                {#{% for attribute in form.presetAttributes %}#}
                    {#{% include 'HopitalNumeriqueAutodiagBundle:Model/Attribute:_preset.html.twig' with {'preset': attribute} %}#}
                {#{% endfor %}#}

                {{ form_row(form.model.synthesisAuthorized) }}

                {{ form_row(form._token) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
