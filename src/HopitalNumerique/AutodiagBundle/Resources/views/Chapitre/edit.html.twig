{% extends 'HopitalNumeriqueAutodiagBundle::popin.html.twig' %}

{% block popinTitle %}Editer le chapitre{% endblock %}

{% block popinContent %}
    {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
    {{ form_start(form) }}
        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.title) }}
                <div class="col-md-11">
                    {{ form_widget(form.title) }}
                </div>
                <div class="col-md-12 col-md-offset-1">
                    <div class="help-block">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4" >
            <div class="form-group" >
                {{ form_label(form.code) }}
                <div class="col-md-3">
                    {{ form_widget(form.code) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.code) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" >
            <div class="form-group" style="{% if chapitre.parent is not null %}display:none{% endif %}">
                {{ form_label(form.noteOptimale) }}
                <div class="col-md-3">
                    {{ form_widget(form.noteOptimale) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.noteOptimale) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" >
            <div class="form-group">
                {{ form_label(form.noteMinimale) }}
                <div class="col-md-3">
                    {{ form_widget(form.noteMinimale) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.noteMinimale) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.synthese) }}
                <div class="col-md-12">
                    {{ form_widget(form.synthese) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.synthese) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.intro) }}
                <div class="col-md-12">
                    {{ form_widget(form.intro) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.intro) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.desc) }}
                <div class="col-md-12">
                    {{ form_widget(form.desc) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.desc) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block popinActions %}
    <div onclick="$.fancybox.close(true);" class="btn-danger btn">Fermer</div>
    <div onclick="saveChapitre( '{{path('hopitalnumerique_autodiag_chapitre_save',{'id':chapitre.id})}}' );" class="btn-primary btn">Enregistrer</div>
{% endblock %}

{% block popinJavascript %}
    $('#fancybox form.toValidate').validationEngine();
{% endblock %}