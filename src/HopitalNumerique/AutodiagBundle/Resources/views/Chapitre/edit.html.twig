                    {{ form_widget(form.descriptionLien) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.descriptionLien) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.lien) }}
                <div class="col-md-11">
                    {{ form_widget(form.lien) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.lien) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.synthese) }}
                <div class="col-md-10">
                    {{ form_widget(form.synthese) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.synthese) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.intro) }}
                <div class="col-md-10">
                    {{ form_widget(form.intro) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
