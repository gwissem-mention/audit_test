        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.desc) }}
                <div class="col-md-10">
                    {{ form_widget(form.desc) }}
                </div>
                <div class="col-md-12">
                    <div class="help-block">
                        {{ form_errors(form.desc) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <style type="text/css">
        .panel-body{overflow: scroll;overflow-x: hidden;height: 450px;}
    </style>
{% endblock %}

{% block popinActions %}
    <div onclick="$.fancybox.close(true);" class="btn-danger btn">Fermer</div>
    <div onclick="saveChapitre( '{{path('hopitalnumerique_autodiag_chapitre_save',{'id':chapitre.id})}}' );" class="btn-primary btn">Enregistrer</div>
{% endblock %}

