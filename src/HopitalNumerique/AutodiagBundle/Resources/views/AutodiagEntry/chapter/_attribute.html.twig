<div class="attribute" data-attribute="{{ attribute.id }}" {% if attribute.colored %}data-mood{% endif %}>
    {% if forms[attribute.id] is defined  %}

        <div class="attribute-description">
            <p>
                {{ attribute.description }}
            </p>
        </div>

        <div class="row">
            <div class="col-md-3 attribute-label">
                {{ attribute.label }}
            </div>

            <div class="col-md-9">
                {{ form_start(forms[attribute.id]) }}

                <div class="attribute-value">
                    <div class="widget">
                        {{ form_widget(forms[attribute.id].value) }}
                    </div>

                    <div class="tools">
                        <div class="attribute-mood"></div>
                        <i title="{{ 'attribute.comment.add'|trans }}" class="comment-button fa fa-comment tool-comment"></i>
                    </div>

                    <div class="clearfix"></div>
                </div>

                <div class="attribute-comment">
                    {{ form_widget(forms[attribute.id].comment) }}
                </div>

                {{ form_end(forms[attribute.id]) }}
            </div>


        </div>
    {% endif %}
</div>
