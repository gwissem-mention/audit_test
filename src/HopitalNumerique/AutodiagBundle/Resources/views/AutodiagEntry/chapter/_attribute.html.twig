<div class="attribute" data-attribute="{{ attribute.id }}" {% if attribute.colored %}data-mood{% endif %} {% if attribute.colorationInversed %}data-inverse-mood{% endif %}>
    {% if forms[attribute.id] is defined  %}

        <div class="row">

            {% if attribute.description is not null %}
                <div class="col-md-12 attribute-description">
                    <p>
                        {{ attribute.description|glossaire_add(autodiag, 'autodiag')|raw }}
                    </p>
                </div>
            {% endif %}

            <div class="col-md-12 attribute-label">
                {% if attribute.tooltip is not empty %}
                    <i class="attribute-tooltip fa fa-question-circle" data-toggle="tooltip" title="{{ attribute.tooltip }}"></i>
                {% endif %}
                {{ attribute.extendedLabel|glossaire_add(autodiag, 'autodiag')|raw }}
            </div>

            {% if attribute.additionalDescription is not empty %}
                <div class="col-md-12 attribute-additional-description">
                    {{ attribute.additionalDescription|glossaire_add(autodiag, 'autodiag')|raw }}
                </div>
            {% endif %}

            <div class="col-md-12">
                {{ forms[attribute.id]|raw }}
            </div>

        </div>
    {% endif %}
</div>
