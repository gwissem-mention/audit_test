<div class="tableau">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Nombre de r√©ponses</th>
                <th>Score</th>
                {% for code, reference in result.references %}
                    <th>{{ reference }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for data in result.items %}
                <tr class="root">
                    <td class="container-label">{{ data.label }}</td>
                    <td>{{ data.numberOfAnswers }}/{{ data.numberOfQuestions }}</td>
                    <td>{{ data.score.value }}/100</td>
                    {% for code, reference in result.references %}
                        <td>
                            {% if data.references[code] is defined %}
                                {{ data.references[code].value }}
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
                {% for children in data.childrens %}
                    <tr class="children">
                        <td class="container-label">{{ children.label }}</td>
                        <td>{{ children.numberOfAnswers }}/{{ children.numberOfQuestions }}</td>
                        <td>{{ children.score.value }}/100</td>
                        {% for code, reference in result.references %}
                            <td>
                                {% if children.references[code] is defined %}
                                    {{ children.references[code].value }}
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
</div>
