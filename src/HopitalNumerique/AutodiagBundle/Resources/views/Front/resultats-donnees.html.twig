                                                            style="color:#c82f5b"
                                                        {% elseif questionChild.max == questionChild.initialValue %}
                                                            style="color:#e88824"
                                                        {% else %}
                                                            style="color:#e88824"
                                                        {% endif %}
                                                    {% else %}
                                                        {% if questionChild.min == questionChild.initialValue %}
                                                            style="color:#e88824"
                                                        {% elseif questionChild.max == questionChild.initialValue %}
                                                            style="color:#c82f5b"
                                                        {% else %}
                                                            style="color:#e88824"
                                                        {% endif %}
                                                    {% endif %}{% endif %}>
