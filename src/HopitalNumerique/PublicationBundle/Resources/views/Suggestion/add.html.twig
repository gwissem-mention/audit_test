{% extends 'HopitalNumeriqueAccountBundle::layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-publication-suggestion-add.css" filter="cssrewrite, ?yui_css"
    'bundles/hopitalnumeriqueuser/css/specificationUser.css'
    'bundles/hopitalnumeriqueuser/css/inscription.css'
    'bundles/hopitalnumeriquereference/css/referencement-popin.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-publication-suggestion-add.js"
        "@jquery_js"
        "@jquery_ui_js"
        "@bootstrap_js"
        '@fancybox_js'
        '@validationEngine_js'
        '@jquery_toggles_js'
        '@jstree_js'
        '@tinymce_js'
        '@moxiemanager_js'
        '%kernel.root_dir%/Resources/lib/nodevo/Web.js'
        '%kernel.root_dir%/Resources/lib/nodevo/Form/Box.js'
        'bundles/nodevoadmin/plugins/nodevoLoader/nodevoLoader.js'
        'bundles/hopitalnumeriquereference/js/Referencement/Popin.js'
        'bundles/hopitalnumeriqueuser/js/User/inscription.js'
        'bundles/hopitalnumeriquepublication/js/customTinyMCE.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block headerTitle %}Suggérer une ressource{% endblock %}

{% block content%}
    <div id="form_edit_user">
        <div id="form_edit_informations_personnelles">
            {{ form_start(form) }}
            {{ form_javascript(form) }}
            <div class="champ-obligatoire"><span class="etoile">*</span> champ(s) obligatoire(s)</div>
            <div class="background-violet"></div>
            {% if suggestion.id is not null %}
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Référence
                    </label>
                    <div class="col-md-6 control-label">
                        <a href="{{path('hopitalnumerique_reference_referencement_popin', { 'entityType':8, 'entityId':suggestion.id })}}" class="open-popin-referencement edit btn btn-xs btn-primary fancybox.ajax pull-right" style="margin-left: 5px"><i class="fa fa-cog"></i></a>
                        <p class="text-muted text-left"><strong>Note référencement :</strong> {% for commonDomain in commonDomainsWithUser %} &nbsp; {{ commonDomain }} : {{ referencement_note(suggestion, commonDomain) }}{% endfor %}</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <a href="{{ path('hopitalnumerique_suggestion_front_add') }}" style="margin-top: 30px" class="btn btn-success pull-right" title="Valider ma suggestion"><i class="fa fa-check"></i> Valider ma suggestion</a>
                </div>
            {%  else %}
                {{ form_row(form.title) }}
                {{ form_row(form.summary) }}
                {{ form_row(form.synthesis) }}
                {{ form_row(form.link) }}
                {{ form_row(form.file) }}

                <div class="col-md-12">
                    <div onclick="$('form').submit();" class="btn btn-primary pull-right" title="Accéder au référencement"> Accéder au référencement</div>
                </div>
                {{ form_row(form._token) }}
            {%  endif %}

            <div class="clearfix"></div>

            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
