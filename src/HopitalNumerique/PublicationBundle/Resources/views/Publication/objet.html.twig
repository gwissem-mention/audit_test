{% extends 'HopitalNumeriqueCoreBundle::layout.html.twig' %}

{# Référencement #}
{% block title %}{{parent()}} - {% if contenu is defined %}{{objet.titre ~ ' - ' ~ prefix ~ ' ' ~ contenu.titre}}{% else %}{{objet.titre}}{% endif %}{% endblock %}
{% block metadesc %}{{meta['desc']}}{% endblock %}
{% block metakeywords %}{{meta['keywords']|join(', ')}}{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-publication-publication-index.css" filter="cssrewrite"
        'bundles/hopitalnumeriquepublication/css/style.css'
        'bundles/nodevoadmin/plugins/fancybox/jquery.fancybox.css'
        'bundles/hopitalnumeriqueobjet/css/wysiwyg.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
    <link rel="stylesheet" href="{{ asset('bundles/hopitalnumeriquepublication/css/style-print.css') }}" type="text/css" media="print" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-publication-publication-index.js"
        'bundles/nodevoadmin/plugins/fancybox/jquery.fancybox.pack.js'
        'bundles/hopitalnumeriquepublication/js/script.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    {% if objet.isInfraDoc %}
        <div id="sommaire" class="closed">
            <div class="content" style="display:none">
                <a class="resume" href="{{path('hopital_numerique_publication_publication_objet', {'id':objet.id,'alias':objet.alias})}}">Résumé</a>
                <h3 class="violet">Sommaire</h3>
                <ul>
                    {% for one in contenus %}
                        {{ _self.buildTree(one, objet) }}
                    {% endfor %}
                </ul>
                {% if objet.synthese is not null %}
                <a class="resume downloadLink synthese fancybox.iframe" style="width:90px;text-align:left" href="{{path('hopital_numerique_publication_synthese',{'id':objet.id})}}" ><i class="common-sprite common-sprite-arrow"></i>Synthèse</a>
                {% endif %}
            </div>
        </div>
        <div id="publication" class="with-sommaire">
    {% else %}
        <div id="publication">
    {% endif %}
        <a class="btn btn-default back" href="{{path('hopital_numerique_recherche_homepage')}}"><i class="fa fa-reply"></i></a>
        <div class="btn btn-default print" onclick="print();"><i class="fa fa-print"></i></div>
        <div class="col-md-12">
            <h4 class="violet" >{{types}}</h4>
        </div>
        {# Cas Contenu #}
        {% if contenu is defined %}
            <div class="col-md-12">
                <h1>{{objet.titre ~ ' - ' ~ prefix ~ ' ' ~ contenu.titre}}</h1>
            </div>
            
            <div class="col-md-12">
                {{contenu.contenu|parsePublication|raw}}
            </div>
        {# Cas Objet #}
        {% else %}
            <div class="col-md-12">
                <h1>{{objet.titre}}{% if objet.isInfraDoc %} - Résumé{% endif %}</h1>
            </div>
            
            <div class="col-md-12">
                {{objet.resume|parsePublication|raw}}
            </div>
        {% endif %}

        {# Téléchargement fichier + synthèse #}
        {% if objet.getAbsolutePath(true) is not null or objet.getAbsolutePath(false) is not null or objet.synthese is not null %}
            <div class="col-md-4">
                <div class="wrapper">
                    {% if objet.getAbsolutePath(true) is not null %}
                        <a class="pull-left downloadLink readmore" href="/{{objet.getWebPath(true)}}" target="_blank"><i class="common-sprite common-sprite-arrow"></i><span class="violet">Télécharger</span> la production complète ( {{objet.getTypeMime(true)|upper}} )</a><i class="pull-left fa fa-download violet"></i>
                    {% endif %}

                    <div class="clearfix"></div>
                    {% if objet.getAbsolutePath(false) is not null %}
                        <a class="pull-left downloadLink readmore" href="/{{objet.getWebPath(false)}}" target="_blank"><i class="common-sprite common-sprite-arrow"></i><span class="violet">Télécharger</span> la production complète ( {{objet.getTypeMime(false)|upper}} )</a><i class="pull-left fa fa-download violet"></i>
                    {% endif %}
                    
                    <div class="clearfix"></div>
                    {% if objet.synthese is not null %}
                        <a class="downloadLink readmore synthese fancybox.iframe" href="{{path('hopital_numerique_publication_synthese',{'id':objet.id})}}" ><i class="common-sprite common-sprite-arrow"></i>Synthèse</a>
                    {% endif %}

                    <div class="clearfix"></div>
                </div>
            </div>
        {% endif %}

        <div class="clearfix"></div>
    </div>

    {% if app.user and app.user|checkAuthorization( path('hopital_numerique_registre_homepage') ) and ambassadeurs is not empty %}
        <div id="ambassadeurs" class="closed">
            <div class="content" style="display:none">
                <h3 class="violet">Les ambassadeurs</h3>
                {% for ambassadeur in ambassadeurs %}
                    <div class="ambassadeur">
                        <p class="nom">{{ambassadeur.prenom|capitalize ~ ' ' ~ ambassadeur.nom|capitalize}}</p>
                        <p class="etab">
                            {% if ambassadeur.etablissementRattachementSante %}
                                {{ambassadeur.etablissementRattachementSante.nom}}
                            {% else %}
                                {{ambassadeur.autreStructureRattachementSante}}
                            {% endif %}
                        </p>
                        <p class="fonction">
                            {% if ambassadeur.fonctionDansEtablissementSante %}
                                {{ambassadeur.fonctionDansEtablissementSante}}
                            {% else %}
                                {{ambassadeur.fonctionStructure}}
                            {% endif %}
                        </p>
                        <a class="btn background-violet" href="{{path('hopital_numerique_intervention_demande_nouveau',{'ambassadeur':ambassadeur.id})}}">Solliciter cet ambassadeur</a>
                    </div>
                {% endfor %}
                <a href="{{ path('hopital_numerique_registre_homepage') }}" class="readmore"><i class="common-sprite common-sprite-arrow"></i>Accès à l'annuaire des ambassadeurs</a>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% macro buildTree(one, objet) %}
    <li>
        {% if one.hasContent %}
            <a href="{{path('hopital_numerique_publication_publication_contenu', {'id':objet.id,'alias':objet.alias,'idc':one.id,'aliasc':one.alias})}}" >{{one.order ~ ' ' ~ one.titre}} </a>
        {% else %}
            <p>{{one.order ~ ' ' ~ one.titre}}</p>
        {% endif %}
        {% if one.childs %}
            <ul>
                {% for child in one.childs %}
                    {{ _self.buildTree(child, objet) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
