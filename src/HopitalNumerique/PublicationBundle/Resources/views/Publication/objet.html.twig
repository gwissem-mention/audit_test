{% extends 'HopitalNumeriqueCoreBundle::layout.html.twig' %}

{# Référencement #}
{% block title %}{{parent()}} - {% if contenu is defined %}{{objet.titre ~ ' - ' ~ prefix ~ ' ' ~ contenu.titre}}{% else %}{{objet.titre}}{% endif %}{% endblock %}
{% block metadesc %}{{meta['desc']}}{% endblock %}
{% block metakeywords %}{{meta['keywords']|join(', ')}}{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-publication-publication-index.css" filter="cssrewrite"
        'bundles/hopitalnumeriquepublication/css/style.css'
        'bundles/nodevoadmin/plugins/fancybox/jquery.fancybox.css'
        'bundles/hopitalnumeriqueobjet/css/wysiwyg.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
    <link rel="stylesheet" href="{{ asset('bundles/hopitalnumeriquepublication/css/style-print.css') }}" type="text/css" media="print" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-publication-publication-index.js"
        'bundles/nodevoadmin/plugins/fancybox/jquery.fancybox.pack.js'
        'bundles/hopitalnumeriquepublication/js/script.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    {% if objet.isInfraDoc %}
        <div id="sommaire" class="closed">
            <div class="content" style="display:none">
                {% if objet.synthese is not null %}
                    <a class="resume downloadLink synthese fancybox.iframe" style="width:90px;text-align:left" href="{{path('hopital_numerique_publication_synthese',{'id':objet.id})}}" ><i class="common-sprite common-sprite-arrow"></i>Synthèse</a>
                {% endif %}
                <h3 class="violet">Sommaire</h3>
                <ul>
                    {% for one in contenus %}
                        {{ _self.buildTree(one, objet) }}
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div id="publication" class="with-sommaire">
    {% else %}
        <div id="publication">
    {% endif %}
        <div class="col-md-10">
            <h4 class="gris" >{{types}}</h4>
        </div>
        <div class="col-md-2">
            <div class="btn btn-sm btn-default print pull-right" onclick="print();"><i class="fa fa-print"></i></div>
            <a class="btn btn-sm btn-default back pull-right" href="{{path('hopital_numerique_recherche_homepage')}}"><i class="fa fa-reply"></i></a>
        </div>
        {# Cas Contenu #}
        {% if contenu is defined %}
            <div class="col-md-12">
                <a class="objetLink rose" href="{{path('hopital_numerique_publication_publication_objet', {'id':objet.id,'alias':objet.alias})}}">{{objet.titre}}</a>
                <h1 class="violet">{{prefix ~ ' ' ~ contenu.titre}}</h1>
            </div>
            
            <div class="col-md-12">
                {{contenu.contenu|parsePublication|raw}}
            </div>
        {# Cas Objet #}
        {% else %}
            <div class="col-md-12">
                <h1 class="violet">{{objet.titre}}</h1>
            </div>
            
            <div class="col-md-12">
                {{objet.resume|parsePublication|raw}}
            </div>
        {% endif %}

        {# Téléchargement fichier + synthèse #}
        {% if objet.getAbsolutePath(true) is not null or objet.getAbsolutePath(false) is not null or objet.synthese is not null %}
            <div class="col-md-4">
                <div class="wrapper">
                    {% if objet.getAbsolutePath(true) is not null %}
                        <a class="pull-left downloadLink readmore" href="/{{objet.getWebPath(true)}}" target="_blank"><i class="common-sprite common-sprite-arrow"></i><span class="violet">Télécharger</span> la production complète ( {{objet.getTypeMime(true)|upper}} )</a><i class="pull-left fa fa-download violet"></i>
                    {% endif %}

                    <div class="clearfix"></div>
                    {% if objet.getAbsolutePath(false) is not null %}
                        <a class="pull-left downloadLink readmore" href="/{{objet.getWebPath(false)}}" target="_blank"><i class="common-sprite common-sprite-arrow"></i><span class="violet">Télécharger</span> la production complète ( {{objet.getTypeMime(false)|upper}} )</a><i class="pull-left fa fa-download violet"></i>
                    {% endif %}
                    
                    <div class="clearfix"></div>
                    {% if objet.synthese is not null %}
                        <a class="downloadLink readmore synthese fancybox.iframe" href="{{path('hopital_numerique_publication_synthese',{'id':objet.id})}}" ><i class="common-sprite common-sprite-arrow"></i>Synthèse</a>
                    {% endif %}

                    <div class="clearfix"></div>
                </div>
            </div>
        {% endif %}
        
        {# Autres résultats de recherche#}
        {% if contenu is not defined %}
            {% set contenu = false %}
        {% endif %}
        <div class="col-md-12" id="autresResultats" >
            <h2 class="open">Autres résultats de votre requête de recherche</h2>
            <div class="row">
                <div class="col-md-6">
                    <div id="points-durs" class="top" >
                        <h3>Points durs</h3>
                        {{ _self.buildCarousel(objet, objets, contenu, '- Aucun point dur trouvé -', 'point-dur') }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="production" class="top" >
                        <h3>Productions</h3>
                        {{ _self.buildCarousel(objet, objets, contenu, '- Aucune production trouvée -', 'production') }}
                    </div>
                </div>
            </div>
            <div class="separator"></div>
            <div class="row">
                <div class="col-md-6">
                    <div id="ressources" class="bottom background-rose" >
                        <h3>Ressources externes</h3>
                        {{ _self.buildCarousel(objet, objets, contenu, '- Aucune ressource externe trouvée -', 'ressource') }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="forum" class="bottom background-violet" >
                        <h3>Forum</h3>
                        {{ _self.buildCarousel(objet, objets, contenu, '- Aucun fil de discussion du forum trouvé -', 'forum') }}
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    {% if app.user and app.user|checkAuthorization( path('hopital_numerique_registre_homepage') ) and ambassadeurs is not empty %}
        <div id="ambassadeurs" class="closed">
            <div class="content" style="display:none">
                <h3 class="violet">Les ambassadeurs</h3>
                {% for ambassadeur in ambassadeurs %}
                    <div class="ambassadeur">
                        <p class="nom">{{ambassadeur.prenom|capitalize ~ ' ' ~ ambassadeur.nom|capitalize}}</p>
                        <p class="etab">
                            {% if ambassadeur.etablissementRattachementSante %}
                                {{ambassadeur.etablissementRattachementSante.nom}}
                            {% else %}
                                {{ambassadeur.autreStructureRattachementSante}}
                            {% endif %}
                        </p>
                        <p class="fonction">
                            {% if ambassadeur.fonctionDansEtablissementSante %}
                                {{ambassadeur.fonctionDansEtablissementSante}}
                            {% else %}
                                {{ambassadeur.fonctionStructure}}
                            {% endif %}
                        </p>
                        <a class="btn background-violet" href="{{path('hopital_numerique_intervention_demande_nouveau',{'ambassadeur':ambassadeur.id, 'prod':objet.id})}}">Solliciter cet ambassadeur</a>
                    </div>
                {% endfor %}
                <a href="{{ path('hopital_numerique_registre_homepage') }}" class="readmore"><i class="common-sprite common-sprite-arrow"></i>Accès à l'annuaire des ambassadeurs</a>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% macro buildTree(one, objet) %}
    <li>
        {% if one.hasContent %}
            <a href="{{path('hopital_numerique_publication_publication_contenu', {'id':objet.id,'alias':objet.alias,'idc':one.id,'aliasc':one.alias})}}" >{{one.order ~ ' ' ~ one.titre}} </a>
        {% else %}
            <p>{{one.order ~ ' ' ~ one.titre}}</p>
        {% endif %}
        {% if one.childs %}
            <ul>
                {% for child in one.childs %}
                    {{ _self.buildTree(child, objet) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}

{% macro buildCarousel(objet, objets, contenu, emptyMessage, key) %}
<div id="{{key}}-slides" class="results carousel slide" data-ride="carousel" >
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        {% set count = 1 %}
        {% set active = '' %}

        {% for item in objets if item['categ'] == key %}
            <div class="item{{active}}" data-pos="{{count}}" >
                <h4>
                    {% if item['updated'] %}
                        <span class="label label-success">MaJ</span>
                    {% elseif item['new'] %}
                        <span class="label label-danger">Nouveau</span>
                    {% endif %}

                    {% if item['objet'] is not null %}
                        <a href="{{path('hopital_numerique_publication_publication_contenu', {'id':item['objet'],'alias':item['aliasO'],'idc':item['id'],'aliasc':item['aliasC']})}}" >
                    {% else %}
                        <a href="{{path('hopital_numerique_publication_publication_objet', {'id':item['id'],'alias':item['alias']})}}" >
                    {% endif %}
                        {{item['titre']}}{% if item['objet'] is not null %}<small> - Extrait d'une production</small>{% endif %}
                    </a>
                </h4>

                <p>{{ item['resume']|trim }}</p>
            </div>
            
            {% if (contenu != false and item['objet'] is not null and item['id'] == contenu.id) or (contenu == false and item['objet'] is null and item['id'] == objet.id) %}
                {% set active = ' active' %}
            {% else %}
                {% set active = '' %}
            {% endif %}

            {% set count = count + 1 %}
        {% else %}
            <div class="item active">
                <h4></h4>
                <p class="noresult"> {{emptyMessage}} </p>
            </div>
        {% endfor %}
    </div>

    {% if count > 1 %}
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {% for i in 1..count - 1 %}
                <li data-target="#{{key}}-slides" data-slide-to="{{i-1}}" class="pos-{{i}}" ></li>
            {% endfor %}
        </ol>

        <!-- Controls -->
        <a class="left carousel-control" href="#{{key}}-slides" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left violet"></span>
        </a>
        <a class="right carousel-control" href="#{{key}}-slides" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right violet"></span>
        </a>
    {% endif %}
</div>
{% endmacro %}
