<div class="panel panel-midnightblue" style="margin:0" >
    <div class="panel-heading">
        <h4>Ajouter un board lié</h4>
    </div>

    <div class="panel-body" >
        <form action="" class="form-horizontal" style="min-height:200px">
            <div class="form-group">
                <div class="col-md-12" style="height: 205px; overflow-y: auto;">
                    <label for="boards" class="col-md-12">Liste des boards</label>
                    <select name="boards" id="boards-linked" multiple="multiple" class="form-control col-md-12">
                        {% for board in boards %}
                            <option value="{{ board.id }}" >{{ board.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </form>

        <input type="hidden" id="save-board-url" value="{{path('hopitalnumerique_objet_board_saveLink')}}" />

        <div class="panel-footer" >
            <div class="row">
                <div class="btn-toolbar pull-right">
                    <div onclick="$.fancybox.close(true);" class="btn-danger btn">Fermer</div>
                    <div onclick="addObjet({{ object.id }});" class="btn-primary btn">Enregistrer</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#boards-linked").nSelect({
            formatNoMatches : function(){ return 'Aucune donnée trouvée'; }
        });
    });
</script>