                                        {% endif %}
                                    </div>
                                </div>

                                <div class="form-group {% if objet.isArticle() %}hide{% endif %}">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="help-block">
                                                {{ form_errors(form.file) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group {% if objet.isArticle() %}hide{% endif %}" style="margin-bottom:0">
                                    {{ form_label(form.file2) }}
