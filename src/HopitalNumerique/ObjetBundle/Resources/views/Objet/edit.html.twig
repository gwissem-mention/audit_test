{% block toolbarButton %}
    {% if objet.id %}
        {%- if is_granted('ROLE_SUPER_ADMIN') -%}
            <a class="btn btn-primary" href="{{ path('hopitalnumerique_objet_administration_fichierModifiable', {'id': objet.id}) }}" title="Page d'administration" style="margin-right:30px"><i class="fa fa-cogs"></i></a>
        {%- endif -%}
        <a class="btn btn-default" href="{{ path('hopitalnumerique_objet_objet_cancel', { 'id': objet.id }) }}" title="Retour à la liste"><i class="fa fa-reply"></i></a>
        <a class="btn btn-default" href="{{ path('hopital_numerique_publication_publication_objet', { 'id': objet.id }) }}" target="_blank" title="Prévisualiser"><i class="fa fa-eye"></i></a>
    {% else %}
        <a class="btn btn-default" href="{{ path('hopitalnumerique_objet_objet') }}" title="Retour à la liste"><i class="fa fa-reply"></i></a>
    {% endif %}
