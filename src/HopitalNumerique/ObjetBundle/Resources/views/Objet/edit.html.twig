{% macro buildTree(contenu) %}
    <li class="dd-item dd3-item" data-id="{{contenu.id}}" id="contenu-{{contenu.id}}" >
        <div class="dd-handle dd3-handle"></div>
        <div class="dd3-content">
            <a data-url="{{path('hopitalnumerique_objet_contenu_form', {'id':contenu.id})}}" href="javascript:selectChapitre({{contenu.id}}, '{{path('hopitalnumerique_objet_contenu_form', {'id':contenu.id})}}')" title="{{contenu.titre}}">{{contenu.order ~ ' ' ~ contenu.titre|truncate(50)}}</a>
            <p class="text-muted pull-right">{{contenu.nbVue}} vues - Note réf. : <span>{{contenu.note|round(2)}}</span> / 400</p>
        </div>
        <div class="dd3-actions">
            <div onclick="deleteContenu( {{contenu.id}}, '{{path('hopitalnumerique_objet_contenu_delete', {'id':contenu.id})}}' );" class="pull-right dd3-trash"><i class="fa fa-trash-o"></i></div>
            <a href="{{path('hopitalnumerique_objet_reference_contenu_own', {'id':contenu.id})}}" class="pull-right dd3-eye manageReferences fancybox.ajax"><i class="fa fa-eye"></i></a>
            <a href="{{path('hopitalnumerique_objet_reference_contenu', {'id':contenu.id})}}" class="pull-right dd3-cog manageReferences fancybox.ajax"><i class="fa fa-cog"></i></a>
        </div>
        
        {% if contenu.childs %}
            <ol class="dd-list">
                {% import _self as mySelf %}
                {% for child in contenu.childs %}
                    {{ mySelf.buildTree(child) }}
                {% endfor %}
            </ol>
        {% endif %}
    </li>
{% endmacro %}

{% macro buildProductionListe(production, objetId) %}
    <li class="dd-item dd3-item" data-id="{{production.brut}}" id="prod-{{production.id}}" >
        <div class="dd-handle dd3-handle"></div>
        <div class="dd3-content">
            {{production.titre}}
        </div>
        <div class="dd3-actions">
            <div onclick='deleteWithConfirm("{{ path('hopitalnumerique_objet_objet_deleteLink', { 'pointDur':objetId, 'id': production.id, 'obj': production.isObjet }) }}");' class="pull-right dd3-trash"><i class="fa fa-trash-o"></i></div>
        </div>
    </li>
{% endmacro %}



