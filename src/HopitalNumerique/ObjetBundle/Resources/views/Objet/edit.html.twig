                                    {{ form_label(form.types) }}
                                    <div class="col-md-9">
                                        {{ form_widget(form.types) }}
                                    </div>
                                    <div class="col-md-9 col-md-offset-3">
                                        <div class="help-block">
                                            {{ form_errors(form.types) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group {% if objet.isArticle() %}hide{% endif %}" style="margin-bottom:0">
