<div class="panel panel-midnightblue" style="margin:0" >
    <div class="panel-heading">
        <h4>Selectionner une publication</h4>
    </div>

    <div class="panel-body" id="panel-references" >
        <div class="tableContent" >
            <label for="publication">Publication</label>  
            <select name="publication" id="publication" class="form-control">
                <option value=""> - </option>
                {% for option in objets %}
                    <option value="{{ option.value }}">{{ option.text }}</option>
                {% endfor %}
            </select>
        </div>
        
        <div class="panel-footer" >
            <div class="row">
                <div class="btn-toolbar pull-right">
                    <div onclick="$.fancybox.close(true);" class="btn-danger btn">Fermer</div>
                    <div onclick="savePublication();" class="btn-primary btn">Enregistrer</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#publication').select2();
    });
</script>