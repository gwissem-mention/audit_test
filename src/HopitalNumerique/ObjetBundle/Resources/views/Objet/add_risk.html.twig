{% trans_default_domain 'related_risk' %}

<div class="panel panel-midnightblue" style="margin:0" >
    <div class="panel-heading">
        <h4>{{ 'add.title'|trans }}</h4>
    </div>

    <div class="panel-body" >
        <form action="{{ path('hopitalnumerique_objet_related_risks_add', {'object': object.id}) }}" method="POST" class="form-horizontal" style="min-height:200px">
            <div class="form-group">
                <div class="col-md-12" style="height: 205px; overflow-y: auto;">
                    <label for="risks" class="col-md-12">{{ 'add.label'|trans }}</label>
                    <select name="risks[]" id="risks-linked" multiple="multiple" class="form-control col-md-12">
                        {% for risk in risks %}
                            <option value="{{ risk.id }}" >{{ risk.label }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="panel-footer" >
                <div class="row">
                    <div class="btn-toolbar pull-right">
                        <div onclick="$.fancybox.close(true);" class="btn-danger btn">{{ 'add.close'|trans }}</div>
                        <button type="submit" class="btn-primary btn">{{ 'add.save'|trans }}</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#risks-linked").nSelect({
            formatNoMatches : function(){ return '{{ 'add.empty'|trans }}'; }
        });
    });
</script>
