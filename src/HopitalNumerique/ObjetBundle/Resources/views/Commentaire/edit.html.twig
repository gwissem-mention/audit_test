{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block h1Title %}
    Editer un commentaire
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_objet_admin_commentaire') }}" title="Retour Ã  la liste"><i class="fa fa-reply"></i></a>
    <div onclick="$('form').submit();" class="btn btn-default" title="Enregistrer"><i class="fa fa-check"></i></div>
    <div onclick="$('#do').val('save-close');$('form').submit();" class="btn btn-default" title="Enregistrer et Fermer"><i class="fa fa-save"></i></div>
    {% if commentaire.id %}
        <div onclick='deleteWithConfirm("{{ path('hopitalnumerique_objet_admin_commentaire_delete', { 'id': commentaire.id }) }}");' class="btn btn-default" title="Supprimer"><i class="fa fa-trash-o"></i></div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <h4>
                    Commentaire de : <strong>{{commentaire.user.getAppellation()}}</strong>, sur l'article : <strong>{{commentaire.objet.titre}}</strong>
                </h4>
            </div>

            <div class="panel-body">
                {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
