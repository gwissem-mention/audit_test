<div class="connexion-bloc">
    <h3>Connectez-vous</h3>
    <form action="{{ path("account_login_check") }}" class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label col-md-4" for="username">Identifiant ou email</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="username" name="_username">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label col-md-4" for="password">Mot de passe</label>
                <div class="col-md-8">
                    <input type="password" class="form-control" id="password" name="_password">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                        Rester connecté
                    </label>
                </div>
                <div class="col-md-8">
                    <a href="{{path('fos_user_resetting_request')}}" target="_blank">Mot de passe oublié</a>
                    <a href="{{path('hopital_numerique_user_inscription')}}" target="_blank">Inscription</a>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token() }}">
        <input type="submit" id="_submit" name="_submit" class="btn btn-success pull-right submit" value="CONNEXION">
        <div class="clearfix"></div>
    </form>
</div>
