{% extends 'HopitalNumeriqueCoreBundle::layout.html.twig' %}

{% block metadesc %}Page de contact{% endblock %}
{% block metakeywords %}contact{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% stylesheets output="compiled/hopitalnumerique-contact-index.css" filter="cssrewrite"
        'bundles/hopitalnumeriqueuser/js/select2-3.4.5/select2.css'
        'bundles/hopitalnumeriqueuser/js/select2-3.4.5/select2-bootstrap.css'
        'bundles/nodevoadmin/plugins/nodevoLoader/nodevoLoader.css'
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/css/validationEngine.jquery.css'
        'bundles/hopitalnumeriquecontact/css/contact.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    {% javascripts output="compiled/hopitalnumerique-contact-index.js"
        'bundles/hopitalnumeriqueuser/js/select2-3.4.5/select2.min.js'
        'bundles/nodevoadmin/plugins/nodevoLoader/nodevoLoader.js'
        'bundles/nodevocontact/js/jquery.maskedinput.min.js'
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/js/jquery.validationEngine.js'
        'bundles/nodevoadmin/plugins/jQueryValidationEngine/js/languages/jquery.validationEngine-fr.js'
        'bundles/hopitalnumeriquecontact/js/script.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="panel">
        <div id="contact">
	        {% block chapo %}
	            <div class="chapo">
	                <h1 class="violet">Lorem ipsum dolor sit amet</h1>
	                <div class="description"><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla luctus tincidunt purus nec adipiscing. Cras eu nisi dolor. Vestibulum laoreet mi at quam dictum, vitae iaculis metus elementum. Aliquam ut ante non ligula sollicitudin vulputate. Nullam mattis vulputate sem ut placerat. Ut ac vulputate diam. Aenean suscipit lobortis tortor sit amet pharetra. Suspendisse placerat mauris non fringilla mollis. Nulla non eleifend est. Mauris ac tincidunt dolor. Mauris venenatis sit amet eros in rutrum. Ut erat sapien, viverra id dui in.</p></div>
	            </div>
	        {% endblock %}
	        
	        {% if block('barreActions') is not empty %}
	            <div class="actions">
	                {% block barreActions %}{% endblock %}
	            </div>
	        {% endif %}
	        
	        <div id="contact_form">
	            <div class="panel">
			        <div class="champ-obligatoire"><span class="etoile">*</span> champ(s) obligatoire(s)</div>
			        
	                {# Input hidden permettant de stocker la route pour le refresh du département en ajax #}
                    <input type="hidden" id="departement-url" value="{{path('hopital_numerique_user_front_departements')}}" />
	                {# Input hidden permettant de stocker la route pour le refresh de établissement en ajax #}
	                <input type="hidden" id="etablissement-url" value="{{path('hopital_numerique_user_front_etablissements')}}" />
                    
                    {# Création du formulaire #}
			        {% form_theme form 'NodevoAdminBundle::form.html.twig' %}
			        {{ form_javascript(form) }}
			        {{ form_start(form, { 'action': path('hopital_numerique_contact_homepage') }) }}
			            {{ form_row(form.civilite) }}
			            {{ form_row(form.prenom) }}
			            {{ form_row(form.nom) }}
			            {{ form_row(form.telephone) }}
			            {{ form_row(form.mail) }}
			            {{ form_row(form.region) }}
			            {{ form_row(form.departement) }}
			            {{ form_row(form.codepostal) }}
			            {{ form_row(form.ville) }}
			            {{ form_row(form.statutEtablissementSante) }}
			            {{ form_row(form.etablissementRattachementSante) }}
			            {{ form_row(form.autreStructureRattachementSante) }}
			            {{ form_row(form.fonctionStructure) }}
			            {{ form_row(form.message) }}
			    
			        {{ form_end(form) }}
			        <div class="col-md-9">
			            <input onclick="$('form').submit();" class="btn btn-success col-md-2 pull-right submit" value="{{ 'envoyer'|upper }}" type="button"/>
			        </div>
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
    </div>
{% endblock %}