            'bundles/hopitalnumeriquecore/css/Templates/2/ie8.css'
        %}
            <!--[if IE 8]>
            <link rel="stylesheet" href="{{ asset_url }}" />
            <![endif]-->
        {% endstylesheets %}

        {% stylesheets output="compiled/hopitalnumerique-homepage-core-default-index-2.css" filter="cssrewrite, ?yui_css"
