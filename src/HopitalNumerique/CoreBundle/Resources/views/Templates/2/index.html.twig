<body>
{% include 'NodevoCookieBundle:Cookie:index.html.twig' %}
{{ block('flashBags') }}
<div class="homepage" id="body">
    <div class="col-md-12 no-padding" id="header-container">
        <div id="header" class="col-md-12">
            <a href="/" id="logo-header">
                <img src="/{{ domaineCurrent.getWebPath() }}" alt="{{domaineCurrent.nom}}" id="logoAnap" class="pull-left" />
            </a>
            <div id="titre" class="pull-left">
                <a href={% if domaineCurrent.urlTitre %}"{{domaineCurrent.urlTitre}}" {% else %} "{{path('hopital_numerique_homepage')}}" {% endif %} class="h1">{{domaineCurrent.nom}}</a>
                <div class="h2">{{domaineCurrent.description}}</div>
            </div>

            <div class="loggedUser pull-right">
                <div class="connexion">
                    {% if app.user == false %}
                        <a href="{{path('account_login')}}"><i class="fa fa-user" ></i>Se connecter</a>
                    {% endif %}
                </div>
                {% if app.user %}
                    {% if app.user.nom or app.user.prenom %}
                        <p>
                            <i class="fa fa-user" ></i> {{ app.user.prenom|capitalize }}
                            <span class="nom">{{ app.user.nom|capitalize }}</span>
                        </p>
                    {% else %}
                        <p>
                            <i class="fa fa-user" ></i> {{ app.user.username|capitalize }}
                        </p>
                    {% endif %}
                        <div class="connexion">
                            {% set previousAdmin = false  %}
                            {% for role in app.security.getToken().getRoles() %}
                                {% if role.getRole() == 'ROLE_PREVIOUS_ADMIN' %}
                                    {% set previousAdmin = true %}
                                {% endif %}
                            {% endfor %}
                            {% if previousAdmin %}
                                <a href="{{ path('hopital_numerique_homepage', {'_switch_user': '_exit'}) }}">Quitter cet utilisateur</a>
                            {% else %}
                                <a href="{{path('account_logout')}}">Déconnexion</a>
                            {% endif %}
		                </div>
	                {% else %}
                    <a class="infos btn btn-rose" href="{{path('hopital_numerique_user_inscription')}}">Créer un compte</a>
                {% endif %}
            </div>
            <div id="logoHn" class="pull-right">
                <a href="http://www.sante.gouv.fr/le-programme-hopital-numerique.html" targt="_blank">
                <img src="{{asset('bundles/hopitalnumeriquecore/img/mhn-small.jpg')}}" alt="HOPITAL NUMERIQUE" />
                </a>
            </div>

            <div class="common-sprite common-sprite-header"></div>
            <div class="clearfix"></div>
        </div>

        {# Menu #}
        <div class="col-md-12" id="menu-container">
            <div class="col-md-12 col-sm-12">
                {{ knp_menu_render(aliasMenuTemplateCurrent, {'currentClass': 'active', 'ancestorClass':'active','template':'HopitalNumeriqueCoreBundle::menu.html.twig'}) }}
                {{ knp_menu_render(aliasMenuTemplateCurrent, {'currentClass': 'active', 'ancestorClass':'active','template':'HopitalNumeriqueCoreBundle::menu_responsive.html.twig'}) }}
            </div>
            <div class="clearfix"></div>
        </div>

        <style type="text/css">
        </style>


        <div id="header-slide" class="col-md-12 no-padding">
            <div class="col-md-9 no-padding">
                <div id="slide" class="col-md-12 no-padding">
                    {% for article in articlesALaUne %}
                        <div>
                            <div style="background:url({{ article.vignette }}) no-repeat center center;height:100%; -webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;" class="image-slide"></div>
                            {% if loop.first %}
                                <img class="bandeau-anap" src="{{asset('bundles/hopitalnumeriquecore/img/anap_slideshow.png')}}" alt="HOPITAL NUMERIQUE" />
                            {% endif %}
                            <div class="block-text-slide-{{loop.index}}">
                                {{article.resume|parsePublication|raw}}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
                <div class="col-md-3 no-padding" id="sidebar">
                    <div id="block-chiffres-cles">
                        <div class="col-md-4 center">
                            <span class="chiffre-cle">672</span>
                            <p>Établissements inscrits</p>
                        </div>
                        <div class="col-md-4 center">
                            <span class="chiffre-cle">{{ nb_consultations }}</span>
                            <p>Vues de publications</p>
                        </div>
                        <div class="col-md-4 center">
                            <span class="chiffre-cle">{{ nb_fils }}</span>
                            <p>Discussions dans le forum</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    {% if publications %}
                        <div id="block-last-publications">
                            <h2><a href="{{path('hopital_numerique_recherche_homepage')}}">Publications les plus consultées</a></h2>
                            <ul>
                        {% for publication in publications %}
                            <li>
                                <a href="{{path('hopital_numerique_publication_publication_objet', {'id':publication.id,'alias':publication.alias})}}">{{ publication.titre }}</a>
                            </li>
                        {% endfor %}
                            </ul>
                            <a href="{{path('hopital_numerique_recherche_homepage')}}" class="btn btn-link lire-suite" style="margin-top:10px;">> Rechercher une publication</a>
                        </div>
                    {% endif %}
                    <div class="clearfix"></div>
                    {% if topics %}
                        <div id="block-fil-discussion">
                            <h2><a href="{{ path('ccdn_forum_user_category_index', {'forumName' : forumName}) }}">Discussions en cours</h2> 
                            <ul>
                        {% for topic in topics %}
                            <li><a href="{{ path('ccdn_forum_user_topic_show', {'forumName': forumName,'topicId': topic.id}) }}" title="{{ topic.title }}">
                                {{- topic.title -}}
                            </a></li>
                        {% endfor %}
                            </ul>
                            <a href="{{ path('ccdn_forum_user_category_index', {'forumName' : forumName}) }}" class="btn btn-link lire-suite">> Accéder au forum</a>
                        </div>
                    {% endif %}
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-9 no-padding">
                <div id="search-help">
                    {{ render(controller("HopitalNumeriqueRechercheBundle:ExpBesoin:rechercheNoPopin", {'expBesoinGestion': 1} )) }}
                </div>
            </div>
            <div class="col-md-3 no-padding">
                <div id="block-carte-france">
                    <div class="carte-france-hover">
                        <h2><a href="{{ path('hopital_numerique_registre_homepage') }}">Vous êtes à la recherche<br /><strong>d'un ambassadeur dans votre région ?</strong></a></h2>
                        <a href="{{ path('hopital_numerique_registre_homepage') }}"><img src="{{asset('bundles/hopitalnumeriquecore/img/picto-ambassadeurs.png')}}" alt="Carte de France"/></a>

                    </div>
                    <div class="carte-france">
                        <h2><a href="{{ path('hopital_numerique_registre_homepage') }}">PRÈS DE CHEZ VOUS</a></h2>
                        <a href="{{ path('hopital_numerique_registre_homepage') }}"><img src="{{asset('bundles/hopitalnumeriquecore/img/carte-france.png')}}" alt="Carte de France"/></a>
                    </div>
                </div>
            </div>
        <div class="clearfix"></div>
    </div>
