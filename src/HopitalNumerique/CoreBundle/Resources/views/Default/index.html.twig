<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block metadesc %}Page d'accueil{% endblock %}">
    <meta name="keywords" content="{% block metakeywords %}{% endblock %}">
    <meta name="author" content="NODEVO">

    <title>{% block title %}Mon Hôpital Numérique - Accueil{% endblock title %}</title>

    <link href='http://fonts.googleapis.com/css?family=Viga|Open+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
        {% stylesheets output="compiled/hopitalnumerique-core.css" filter="cssrewrite, ?yui_css"
        "@bootstrap_css"
        "@font_awesome_css"
        "@fancybox_css"
        "@slick_css"
        "@slick_theme_css"
        'bundles/nodevoadmin/css/custom-jquery-ui.min.css'
        'bundles/nodevoadmin/plugins/nodevoLoader/nodevoLoader.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}


        {% stylesheets output="compiled/hopitalnumerique-core-ie8.css" filter="cssrewrite, ?yui_css"
        'bundles/hopitalnumeriquecore/css/ie8.css'
        %}
        <!--[if IE 8]>
        <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
        {% endstylesheets %}
        {% stylesheets output="compiled/hopitalnumerique-core-default-index.css" filter="cssrewrite, ?yui_css"
        'bundles/hopitalnumeriquecore/css/homepage.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock stylesheets %}

    {% block javascripts %}
        {% javascripts output="compiled/hopitalnumerique-core.js"
        "@jquery_js"
        "@jquery_ui_js"
        "@bootstrap_js"
        "@enquire_js"
        "@fancybox_js"
        "@json_js"
        "@slick_js"
        'bundles/hopitalnumeriquecore/js/script.js'
        'bundles/hopitalnumeriquecore/js/recherche.js'
        'bundles/nodevoadmin/plugins/nodevoLoader/nodevoLoader.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% if app.debug %}
        {% javascripts output="compiled/nodevo-debogage.js"
        'bundles/nodevotools/js/Debogage.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endif %}
    {% endblock %}

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-49829801-1', 'monhopitalnumerique.fr');
        ga('send', 'pageview');
    </script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
{% include 'NodevoCookieBundle:Cookie:index.html.twig' %}
<div class="homepage" id="body">
    <div class="col-md-12 no-padding" id="header-container">
        <div id="header" class="col-md-12">
            <a href="/" target="_blank">
                <img src="{{asset('bundles/hopitalnumeriquecore/img/hn.jpg')}}" alt="ANAP" id="logoAnap" class="pull-left" />
            </a>
            <div id="titre" class="pull-left col-md-3">
                <a href="{{path('hopital_numerique_homepage')}}" class="h1"><span class="violet">Mon</span> Hôpital <span class="gris">Numérique</span></a>
                <div class="h2" class="gris">Accompagnement pour l’atteinte des cibles d’usage</div>
            </div>

            <a href="http://www.anap.fr/" class="col-md-2" id="logoHn" target="_blank">
                <img src="{{asset('bundles/hopitalnumeriquecore/img/anap.jpg')}}" alt="HOPITAL NUMERIQUE" />
            </a>

            <div class="loggedUser pull-right">
                <div class="connexion">
                    {% if app.user %}
                        <a href="{{path('account_logout')}}"><i class="fa fa-user" ></i>Déconnexion</a>
                    {% else %}
                        <a href="{{path('account_login')}}"><i class="fa fa-user" ></i>Se connecter</a>
                    {% endif %}
                </div>
                {% if app.user %}
                    {% if app.user.nom or app.user.prenom %}
                        <p>
                            {{ app.user.prenom|capitalize }}
                            <span class="nom">{{ app.user.nom|capitalize }}</span>
                        </p>
                    {% else %}
                        <p>
                            {{ app.user.username|capitalize }}
                        </p>
                    {% endif %}
                    <a class="infos btn btn-rose" href="{{path('hopital_numerique_account_homepage')}}">Tableau de bord</a>
                {% else %}
                    <a class="infos btn btn-rose" href="{{path('hopital_numerique_user_inscription')}}">Créer un compte</a>
                {% endif %}
            </div>

            <div id="bloc_exalead" class="col-md-3 pull-right">
                <div id="recherche_textuelle_group">
                    <div class="col-md-12 no-padding">
                        <div class="input-group col-md-12 no-padding">
                            <input type="text" name="recherche_textuelle" id="recherche_textuelle" class="form-control col-md-12" placeholder="Rechercher"/>
                            <span class="input-group-addon"><a href="/recherche-par-referencement" id="search-header-home"><i class="fa fa-search"></i></a></span>
                            <input type="hidden" id="recherche_textuelle_minifie" value="" />
                        </div>
                    </div>
                     <span class="bt-recherche pull-right">
                                    <a href="/recherche-par-referencement?type=avancee" id="search-avance-header-home">Recherche avancée <i class="fa fa-angle-right"></i></a>
                                </span>
                </div>
            </div>

            {# <p class="violet pull-right align-right">
                Ce projet s’inscrit dans le cadre du programme
            </p>#}

            <div class="common-sprite common-sprite-header"></div>
            <div class="clearfix"></div>
        </div>
        <div id="header-slide" class="col-md-12 no-padding">
            <div class="col-md-9 no-padding">
                <div id="slide" class="col-md-12 no-padding">
                    <div><img src="{{asset('bundles/hopitalnumeriquecore/img/test-slick.jpg')}}" alt="slide1" class="col-md-12 no-padding"/></div>
                    <div><img src="{{asset('bundles/hopitalnumeriquecore/img/test-slick.jpg')}}" alt="slide1" class="col-md-12 no-padding"/></div>
                </div>
                <div id="search-help" class="col-md-12">Height fixe</div>
            </div>
            <div class="col-md-3 no-padding" id="sidebar">
                {% if publications %}
                    <div id="block-last-publications">
                        <h2><strong>Top 3</strong> des plus consultées</h2>
                        <ul>
                    {% for publication in publications %}
                        <li>
                            <a href="{{path('hopital_numerique_publication_publication_objet', {'id':publication.id,'alias':publication.alias})}}">{{ publication.titre }}</a>
                        </li>
                    {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <div id="block-chiffres-cles">
                    <h2>Chiffres clés</h2>
                    <div class="col-md-4 center">
                        <span class="chiffre-cle">{{ nb_comptes }}</span>
                        <p>Comptes créés</p>
                    </div>
                    <div class="col-md-4 center">
                        <span class="chiffre-cle">1640</span>
                        <p>Visites ce mois</p>
                    </div>
                    <div class="col-md-4 center">
                        <span class="chiffre-cle">{{ nb_fils }}</span>
                        <p>Fils sur le forum</p>
                    </div>
                </div>
                <div class="clearfix"></div>
                {% if topics %}
                    <div id="block-fil-discussion">
                        <h2>Fils de discussion</h2>
                        <ul>
                    {% for topic in topics %}
                        <li><a href="{{ path('ccdn_forum_user_topic_show', {'forumName': forumName,'topicId': topic.id}) }}" title="{{ topic.title }}">
                            {{ topic.title }}
                        </a></li>
                    {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-md-12" id="menu-container">
            <div class="col-md-10">
                {{ knp_menu_render('menu-main-front', {'currentClass': 'active', 'ancestorClass':'active','template':'HopitalNumeriqueCoreBundle::menu.html.twig'}) }}
                {{ knp_menu_render('menu-main-front', {'currentClass': 'active', 'ancestorClass':'active','template':'HopitalNumeriqueCoreBundle::menu_responsive.html.twig'}) }}
            </div>
            <div class="col-md-2 pull-right">
                <a href="#">En savoir plus sur HN <i class="fa fa-angle-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
<div class="col-md-12" id="content">

    {{ block('flashBags') }}
    {% if error is defined and error %}
        <div class="alert nalert-warning" onclick="$(this).slideUp();" >
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {% if invalid_username is defined %}
        <div class="alert nalert-warning" onclick="$(this).slideUp();" >
            {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
        </div>
    {% endif %}
    {% block block_du_body %}
    {% block prebody %}{% endblock prebody %}
    <div class="clearfix"></div>
    {% block body %}
        <div id="homepage" >
            <div class="home-left col-md-5" >
                {% if article.image %}
                    <img src="{{article.image}}" alt="Article Home" />
                {% endif %}
                <h1>{{article.titre}}</h1>
                <p>
                    {{article.resume|raw}}
                </p>

                <h3 class="violet">Actualités</h3>
                <div class="actus">
                    {% if actualites %}
                        {% for actu in actualites %}
                            <div class="actu">
                                <h6>{{actu.types}}</h6>
                                <h5><a href="{{path('hopital_numerique_publication_publication_article',{'id':actu.id, 'alias':actu.alias,'categorie':actu.categories})}}">{{actu.titre}}</a></h5>
                                <span>Le {{actu.date|date('d/m/Y')}}</span>
                                <p>
                                    {{actu.resume|parsePublication|raw}}
                                </p>
                            </div>
                        {% endfor %}
                        <a href="{{path('hopital_numerique_publication_actualite')}}" class="readmore"><i class="common-sprite common-sprite-arrow"></i> Voir toutes les actualités</a>
                    {% else %}
                    - Aucunes actualités -
                    {% endif %}
                </div>
            </div>



            <div class="col-md-7 home-right" >
                <div class="row">
                    <div class="rechercheAideExp col-md-4">
                        <a id="test" class="link fancybox.iframe" href="{{path('hopital_numerique_expbesoin_rechercheFancy')}}" >
                        {#<a href="javascript:rechercheAideEtBesoin();">#}
                            <div class="common-sprite icone"></div>
                            <h3>Recherche aidée</h3>
                            <p>
                                Je décris mon besoin, Mon Hôpital Numérique trouve la solution !
                            </p>
                        </a>
                    </div>
                    <div class="recherche col-md-4">
                        <a href="{{path('hopital_numerique_recherche_homepage')}}">
                            <div class="common-sprite icone"></div>
                            <h3>Recherche avancée</h3>
                            <p>
                                Je choisis mes critères de recherche, je trouve les productions utiles à mon contexte.
                            </p>
                        </a>
                    </div>
                    <div class="rechercheEtapeProjet col-md-4">
                        <a href="{{path('hopital_numerique_recherche_parcours_homepage_front')}}">
                            <div class="common-sprite icone"></div>
                            <h3>Parcours guidé</h3>
                            <p>
                                Etape par étape, j'identifie les risques à venir, et les solutions pour les maîtriser.
                            </p>
                        </a>
                    </div>

                </div>

                <div class="row">
                    <div class="creation-compte col-md-6">
                        <div class="bloc-creation">
                            <div class="common-sprite icone"></div>
                            {% if app.user %}
                                <h3>Mon tableau de bord</h3>
                                <p>
                                    Je bénéficie de nombreux services : enregistrement de mon contexte, de mes auto-diagnostics, notification des mises à jour, sollicitation d'un ambassadeur, etc.
                                </p>
                                <div class="buttons-tdb">
                                    <div class="buttons-centrer">
                                        <a href="{{path('hopital_numerique_account_homepage')}}" class="btn btn-default tdb">Accès au tableau de bord</a>
                                    </div>
                                </div>
                            {% else %}
                                <h3>Mon compte</h3>
                                <p>
                                    En créant mon compte, je bénéficie de nombreux services. <br />
                                    <a target="_blank" href="{{path('hopital_numerique_publication_publication_article',{'id':314, 'alias':'pourquoi-creer-un-compte','categorie':'publication'|lower})}}">Pourquoi créer un compte ?</a>
                                </p>
                                <div class="buttons">
                                    <div class="buttons-centrer">
                                        <div class="row"><a href="{{path('account_login')}}" class="btn btn-default login">Connexion</a></div>
                                        <div class="row"><a href="{{path('hopital_numerique_user_inscription')}}" class="btn btn-default signup">Créer un compte</a></div>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="forum">
                            <div class="common-sprite icone"></div>
                            <h3>Forums</h3>
                            <p>
                                Je partage mes questions et mon expérience avec mes pairs.
                            </p>
                            {# Mode connecté (obligé de séparer les deux car app.user|checkAuthorization pète si pas connecté car app.user = null #}
                            {% if app.user is not null %}
                                {% if app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'Experts'}))
                                   and app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'Ambassadeurs'}))
                                   and app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'CMSI'}))
                                %}
                                    <div class="groupe-lien">
                                        <div class="pull-left">
                                        <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Public'}) -}}">
                                            > Public
                                        </a>
                                        <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Experts'}) -}}">
                                            > Experts
                                        </a>
                                        </div>
                                        <div class="pull-left">
                                        <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Ambassadeurs'}) -}}">
                                            > Ambassadeurs
                                        </a>
                                        <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'CMSI'}) -}}">
                                            > CMSI
                                        </a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                {% else %}
                                    <div class="groupe-lien">
                                        <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Public'}) -}}">
                                            > Forum public
                                        </a>
                                        {% if app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'Experts'})) %}
                                            <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Experts'}) -}}">
                                                > Forum des experts
                                            </a>
                                        {% endif %}
                                        {% if app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'Ambassadeurs'})) %}
                                            <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Ambassadeurs'}) -}}">
                                                > Forum des ambassadeurs
                                            </a>
                                        {% endif %}
                                        {% if app.user|checkAuthorization(path('ccdn_forum_user_category_index', {'forumName': 'CMSI'})) %}
                                            <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'CMSI'}) -}}">
                                                > Forum des CMSI
                                            </a>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {# Mode non-connecté #}
                            {% else %}
                                <div class="groupe-lien">
                                    <a class="btn btn-link" href="{{- path('ccdn_forum_user_category_index', {'forumName': 'Public'}) -}}">
                                        > Forum public
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
    {% endblock body %}
        <div class="clearfix"></div>
    {% endblock %}

    <input type="hidden" id="fancy-recherche-url" value="{{path('hopital_numerique_expbesoin_rechercheFancy')}}" />
</div>

<div class="col-md-12" id="footer">
    {{ knp_menu_render('menu-footer-front', {'currentClass': 'active', 'ancestorClass':'active','template':'HopitalNumeriqueCoreBundle::menu.html.twig'}) }}

    {% if app.user %}
        <a class="reporting btn btn-xs" href="{{path('hopitalnumerique_report_homepage', {url: app.request.uri|base64Nodevo})}}">Signaler une anomalie sur cette page</a>
    {% endif %}

</div>
</div>

{% if app.user and app.user|checkAuthorization( path('hopital_numerique_requete_homepage') ) %}
    <div id="mesrequetes" class="closed">
        <div class="content col-md-12" style="display:none">
            <h3 class="violet">Mes requêtes de recherche</h3>
            {{ render(controller("HopitalNumeriqueRechercheBundle:Requete:index", {'indexVue':false} )) }}
            <a href="{{path('hopital_numerique_requete_homepage')}}" class="readmore"><i class="common-sprite common-sprite-arrow"></i> Gérer mes requêtes</a>
        </div>
    </div>
{% endif %}
</body>
</html>

{% block flashBags %}
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-block nalert-{{type}}" onclick="$(this).slideUp();">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}
