{% extends 'NodevoAdminBundle::admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output="compiled/hopitalnumerique-autodiag-import-edit.css" filter="cssrewrite, ?yui_css" 
        'bundles/hopitalnumeriqueautodiag/css/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block h1Title %}
    Editer un outil d'autodiagnostic : Importer les données
{% endblock %}

{% block toolbarButton %}
    <a class="btn btn-default" href="{{ path('hopitalnumerique_autodiag_outil') }}" title="Retour à la liste"><i class="fa fa-reply"></i></a>
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="panel panel-midnightblue">
            <div class="panel-heading">
                <div class="options">
                    {% include 'HopitalNumeriqueAutodiagBundle::admin-tabs.html.twig' with { 'outil' : outil, 'route': app.request.attributes.get('_route') } %}
                </div>
            </div>

            <div class="panel-body">
                <form action="{{ path("hopitalnumerique_import_read_save", {'id' : outil.id }) }}" class="form-horizontal" method="post" enctype="multipart/form-data" novalidate="novalidate">
                    <div class="background-violet"></div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="username">Fichier upload</label>
                        <div class="col-md-8">
                            <input type="file" class="validate[required] form-control" required="required" name="fichier_import_autodiag" id="fichier_import_autodiag">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <input type="submit" id="_submit" name="_submit" class="btn btn-success pull-right submit" value="Mettre à jour" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}
