<div class="row">
    <div class="col-md-6">
        {{ form_row(form.profileType, {'attr': {'class': 'completion'} }) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.jobType, {'attr': {'class': 'completion'} }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{ form_row(form.jobLabel, {'attr': {'class': 'validate[maxSize[255]] completion'} }) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-12">
                {{ form_label(form.file) }}
            </div>
            <div class="col-md-12">
                {% if user.getAbsolutePath() is not null %}
                    {% set visibility = 'none' %}
                {% else %}
                    {% set visibility = 'block' %}
                {% endif %}
                <div class="inputUpload" style="display:{{visibility}}">
                    {{ form_widget(form.file) }}
                </div>

                {% if user.getAbsolutePath() is not null %}
                    <img class="uploadedFile" src="/{{ user.getWebPath() }}" alt="{{ 'account.user.file'|trans }}" height="132px">
                    <div class="deleteUploadedFile btn btn-danger btn-xs" ><i class="fa fa-trash-o"></i></div>
                {% endif %}
            </div>
            <div class="col-md-12">
                {{ form_errors(form.file) }}
            </div>
        </div>
    </div>
</div>
