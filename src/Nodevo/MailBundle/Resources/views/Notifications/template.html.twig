{% set notif = notifications[0] %}

{% if notifications|length == 1 %}
    {% block single %}{% endblock %}
{% else %}
    {% block header %}{% endblock %}
    <ul style="margin: 0;">
        {% for notification in notifications %}
            {% set notif = notification %}
            <li>{% block content %}{% endblock %}</li>
        {% endfor %}
    </ul>
{% endif %}
