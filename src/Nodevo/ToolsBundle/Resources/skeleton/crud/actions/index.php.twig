    /**
{% block phpdoc_method_header %}
     * Affiche la liste des {{ entity }}.
{% endblock phpdoc_method_header %}
     */
{% block method_definition %}
    public function indexAction()
{% endblock method_definition %}
    {
{% block method_body %}
        $grid = $this->get('{{ namespace|lower|replace({'\\': '_'})|replace({'bundle': ''}) }}.grid.{{entity|lower}}');
{% endblock method_body %}

{% block method_return %}
        return $grid->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}:index.html.twig');
{% endblock method_return %}
    }
