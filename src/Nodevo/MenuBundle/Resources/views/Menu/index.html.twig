{% extends 'NodevoAdminBundle::admin.html.twig' %}

{# Grid mandatory Stuff #}
{% use 'NodevoGridBundle::grid.config.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ block('grid_stylesheets')}}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ block('grid_javascripts')}}
{% endblock %}

{# Template Stuff #}
{% block h1Title %}
    Liste des menus
{% endblock %}

{% block toolbarButton %}
    {% if app.user|checkAuthorization( path('nodevo_menu_menu_add') ) %}
        <a href="{{path('nodevo_menu_menu_add')}}" class="btn btn-default" title="Ajouter un menu"><i class="fa fa-plus"></i></a>
    {% endif %}
{% endblock %}

{% block body %}
    {{ grid(grid, _self) }}
    {# Cache les lignes de filtres dans le grid #}
    {% block grid_filters %}{% endblock grid_filters%}
{% endblock %}